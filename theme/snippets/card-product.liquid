{% comment %}
  Renders a product card

  Accepts:
  - card_product: {Object} Product Liquid object (optional)
  - media_aspect_ratio: {String} Size of the product image card. Values are "square" and "portrait". Default is "square" (optional)
  - show_secondary_image: {Boolean} Show the secondary image on hover. Default: false (optional)
  - show_rating: {Boolean} Show the product rating. Default: false
  - extend_height: {Boolean} Card height extends to available container space. Default: true (optional)
  - lazy_load: {Boolean} Image should be lazy loaded. Default: true (optional)
  - show_quick_add: {Boolean} Show the quick add button.
  - section_id: {String} The ID of the section that contains this card.
  - horizontal_class: {Boolean} Add a card--horizontal class if set to true. Default: false (optional)
  - horizontal_quick_add: {Boolean} Changes the quick add button styles when set to true. Default: false (optional)

  Usage:
  {% render 'card-product' %}
{% endcomment %}
 {% assign card_text_alignment = settings.card_text_alignment %}
 {% if product_card_has_custom_settings %}
  {% assign card_text_alignment = section.settings.card_text_alignment %}
 {% endif %}
 {% assign show_secondary_image = settings.show_secondary_image %}
 {% if product_card_has_custom_settings %}
  {% assign show_secondary_image = section.settings.show_secondary_image %}
 {% endif %}
<style>
  #shopify-section-{{ section.id }} .price__sale  {
    {% if card_text_alignment == 'center' %}
      justify-content: center;
    {% elsif card_text_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
  }
  #shopify-section-{{ section.id }} .product-card-wrapper .product-stock .product__inventory {
    {% if card_text_alignment == 'center' %}
      justify-content: center;
    {% elsif card_text_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 15px;
    margin-bottom: 20px;
  }
</style>
{{ 'component-rating.css' | asset_url | stylesheet_tag }}

{%- if card_product and card_product != empty -%}
  {%- liquid
    assign ratio = 1
    if card_product.featured_media and media_aspect_ratio == 'portrait'
      assign ratio = 0.8
    elsif card_product.featured_media and media_aspect_ratio == 'adapt'
      assign ratio = card_product.featured_media.aspect_ratio
    endif
    if ratio == 0 or ratio == null
      assign ratio = 1
    endif
    if custom_color_scheme
      assign card_color_scheme = custom_color_scheme
    endif
  -%}
  <div class="card-wrapper product-card-wrapper underline-links-hover">
    <div
      class="
              {{ custom_color_scheme }}
        card
        card--card
        {% if card_product.featured_media %} card--media{% else %} card--text{% endif %}
         color-{{ card_color_scheme }} gradient
        {% if extend_height %} card--extend-height{% endif %}
        {% if card_product.featured_media == nil  %} ratio{% endif %}
        {% if horizontal_class %} card--horizontal{% endif %}
      "
      style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;{% if border_radius %} border-bottom-left-radius: {{ border_radius }}px;border-bottom-right-radius: {{ border_radius }}px;{% endif %}"
    >
      <div
        class="card__inner {% if card_product.featured_media %} ratio{% endif %}"
        style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;"
      >
        {%- if card_product.featured_media -%}
          <button
            class="card__media"
            {% if border_radius %}
              style="border-top-left-radius: {{ border_radius }}px;border-top-right-radius: {{ border_radius }}px;border:none !important;padding:0 !important;background:none !important;cursor:pointer !important;"
            {% else %}
              style="border:none !important;padding:0 !important;background:none !important;cursor:pointer !important;"
            {% endif %}
            onclick="window.location.href = '{{ card_product.url }}';"
          >
            {% assign product_card_use_slider_images = settings.product_card_use_slider_images %}
            {% if product_card_has_custom_settings %}
              {% assign product_card_use_slider_images = section.settings.product_card_use_slider_images %}
            {% endif %}
            {%- if product_card_use_slider_images and card_product.media.size > 1 -%}
              <product-card-slider class="product-card-slider" data-product-id="{{ card_product.id }}" show-secondary-image="{{ show_secondary_image }}">
                <div class="product-card-slider__container">
                  {%- for media in card_product.media -%}
                    <div class="product-card-slider__slide" style="opacity: {% if forloop.first %}1{% else %}0{% endif %};">
                      {% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
                      <img
                        srcset="
                          {%- if media.width >= 165 -%}{{ media | image_url: width: 165 }} 165w,{%- endif -%}
                          {%- if media.width >= 360 -%}{{ media | image_url: width: 360 }} 360w,{%- endif -%}
                          {%- if media.width >= 533 -%}{{ media | image_url: width: 533 }} 533w,{%- endif -%}
                          {%- if media.width >= 720 -%}{{ media | image_url: width: 720 }} 720w,{%- endif -%}
                          {%- if media.width >= 940 -%}{{ media | image_url: width: 940 }} 940w,{%- endif -%}
                          {%- if media.width >= 1066 -%}{{ media | image_url: width: 1066 }} 1066w,{%- endif -%}
                          {{ media | image_url }} {{ media.width }}w
                        "
                        src="{{ media | image_url: width: 533 }}"
                        sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
                        alt="{{ media.alt | escape }}"
                        class="motion-reduce"
                        {% unless lazy_load == false %}
                          loading="lazy"
                        {% endunless %}
                        width="{{ media.width }}"
                        height="{{ media.height }}"
                      >
                      {% comment %}theme-check-enable ImgLazyLoading{% endcomment %}
                    </div>
                  {%- endfor -%}
                </div>
                
               
              </product-card-slider>
            {%- else -%}
              <div class="media media--transparent media--hover-effect">
                {% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
                <img
                  srcset="
                    {%- if card_product.featured_media.width >= 165 -%}{{ card_product.featured_media | image_url: width: 165 }} 165w,{%- endif -%}
                    {%- if card_product.featured_media.width >= 360 -%}{{ card_product.featured_media | image_url: width: 360 }} 360w,{%- endif -%}
                    {%- if card_product.featured_media.width >= 533 -%}{{ card_product.featured_media | image_url: width: 533 }} 533w,{%- endif -%}
                    {%- if card_product.featured_media.width >= 720 -%}{{ card_product.featured_media | image_url: width: 720 }} 720w,{%- endif -%}
                    {%- if card_product.featured_media.width >= 940 -%}{{ card_product.featured_media | image_url: width: 940 }} 940w,{%- endif -%}
                    {%- if card_product.featured_media.width >= 1066 -%}{{ card_product.featured_media | image_url: width: 1066 }} 1066w,{%- endif -%}
                    {{ card_product.featured_media | image_url }} {{ card_product.featured_media.width }}w
                  "
                  src="{{ card_product.featured_media | image_url: width: 533 }}"
                  sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
                  alt="{{ card_product.featured_media.alt | escape }}"
                  class="motion-reduce"
                  {% unless lazy_load == false %}
                    loading="lazy"
                  {% endunless %}
                  width="{{ card_product.featured_media.width }}"
                  height="{{ card_product.featured_media.height }}"
                >
                {% comment %}theme-check-enable ImgLazyLoading{% endcomment %}

                {%- if card_product.media[1] != null and show_secondary_image -%}
                  <img
                    srcset="
                      {%- if card_product.media[1].width >= 165 -%}{{ card_product.media[1] | image_url: width: 165 }} 165w,{%- endif -%}
                      {%- if card_product.media[1].width >= 360 -%}{{ card_product.media[1] | image_url: width: 360 }} 360w,{%- endif -%}
                      {%- if card_product.media[1].width >= 533 -%}{{ card_product.media[1] | image_url: width: 533 }} 533w,{%- endif -%}
                      {%- if card_product.media[1].width >= 720 -%}{{ card_product.media[1] | image_url: width: 720 }} 720w,{%- endif -%}
                      {%- if card_product.media[1].width >= 940 -%}{{ card_product.media[1] | image_url: width: 940 }} 940w,{%- endif -%}
                      {%- if card_product.media[1].width >= 1066 -%}{{ card_product.media[1] | image_url: width: 1066 }} 1066w,{%- endif -%}
                      {{ card_product.media[1] | image_url }} {{ card_product.media[1].width }}w
                    "
                    src="{{ card_product.media[1] | image_url: width: 533 }}"
                    sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
                    alt=""
                    class="motion-reduce"
                    loading="lazy"
                    width="{{ card_product.media[1].width }}"
                    height="{{ card_product.media[1].height }}"
                  >
                {%- endif -%}
              </div>
            {%- endif -%}
          </button>
        {%- endif -%}
        <div>
          <div class="card__information">
            <h3
              class="card__heading"
              {% if card_product.featured_media == null %}
                id="title-{{ section_id }}-{{ card_product.id }}"
              {% endif %}
            >
              <a
                href="{{ card_product.url }}"
                id="StandardCardNoMediaLink-{{ section_id }}-{{ card_product.id }}"
                class="full-unstyled-link"
                aria-labelledby="StandardCardNoMediaLink-{{ section_id }}-{{ card_product.id }} NoMediaStandardBadge-{{ section_id }}-{{ card_product.id }}"
              >
                <div class="sw-base-text-color image-with-text__text rte body">
                  <p>
                    {{ card_product.title | escape }}
                  </p>
                </div>
              </a>
            </h3>
          </div>
          {% assign card_custom_badge = settings.card_custom_badge %}
          {% if product_card_has_custom_settings %}
            {% assign card_custom_badge = section.settings.card_custom_badge %}
          {% endif %}
          {% assign card_badge_position = settings.card_badge_position %}
          {% if product_card_has_custom_settings %}
            {% assign card_badge_position = section.settings.card_badge_position %}
          {% endif %}
          {% assign card_badge_background_color = settings.card_badge_background_color %}
          {% if product_card_has_custom_settings %}
            {% assign card_badge_background_color = section.settings.card_badge_background_color %}
          {% endif %}
          {% assign card_badge_bg_type = settings.card_badge_bg_type %}
          {% if product_card_has_custom_settings %}
            {% assign card_badge_bg_type = section.settings.card_badge_bg_type %}
          {% endif %}
          {% assign card_badge_background_gradient = settings.card_badge_background_gradient %}
          {% if product_card_has_custom_settings %}
            {% assign card_badge_background_gradient = section.settings.card_badge_background_gradient %}
          {% endif %}
          {% assign card_badge_text_color = settings.card_badge_text_color %}
          {% if product_card_has_custom_settings %}
            {% assign card_badge_text_color = section.settings.card_badge_text_color %}
          {% endif %}
          {% assign card_badge_corner_radius = settings.card_badge_corner_radius %}
          {% if product_card_has_custom_settings %}
            {% assign card_badge_corner_radius = section.settings.card_badge_corner_radius %}
          {% endif %}
          {% assign card_badge_color_scheme = settings.card_badge_color_scheme %}
          {% if product_card_has_custom_settings %}
            {% assign card_badge_color_scheme = section.settings.card_badge_color_scheme %}
          {% endif %}
          {% assign card_badge_text_html = settings.card_badge_text_html %}
          {% if product_card_has_custom_settings %}
            {% assign card_badge_text_html = section.settings.card_badge_text_html %}
          {% endif %}
          {% if card_custom_badge %}
            <style>
            #NoMediaStandardBadge-{{ section_id }}-{{ card_product.id }} {
              {% if card_badge_bg_type == 'color' %}
                background: {{ card_badge_background_color }};
              {% elsif card_badge_bg_type == 'gradient' %}
                background: {{ card_badge_background_gradient }};
              {% endif %}
              border-radius: {{ card_badge_corner_radius }}px;color: {{ card_badge_text_color }};
            }
          </style>
            <div class="card__badge {{ card_badge_position }}" >
              {%- if card_product.available == false -%}

                <span
                  id="NoMediaStandardBadge-{{ section_id }}-{{ card_product.id }}"
                  class="badge badge--bottom-left"
                >
                  {{- 'products.product.sold_out' | t -}}
                </span>
              {%- elsif card_product.compare_at_price > card_product.price and card_product.available -%}
                <span
                  id="NoMediaStandardBadge-{{ section_id }}-{{ card_product.id }}"
                  class="badge badge--bottom-left color-{{ card_badge_color_scheme }}"
                >
                  {% assign percentage_saved = card_product.compare_at_price
                    | minus: card_product.price
                    | times: 100.0
                    | divided_by: card_product.compare_at_price
                    | floor
                  %}
                  {% assign percentage_saved_string = percentage_saved | append: '%' %}
                  {% assign savings_amount = card_product.compare_at_price | minus: card_product.price | money %}
                  <span class="nowrap">
                    {{-
                      card_badge_text_html
                      | replace: '[percentage]', percentage_saved_string
                      | replace: '[amount]', savings_amount
                    -}}
                  </span>
                </span>
              {%- endif -%}
            </div>
          {% else %}
            <div class="card__badge {{ card_badge_position }}">
              {%- if card_product.available == false -%}
                <span
                  id="NoMediaStandardBadge-{{ section_id }}-{{ card_product.id }}"
                  class="badge badge--bottom-left"
                >
                  {{- 'products.product.sold_out' | t -}}
                </span>
              {%- elsif card_product.compare_at_price > card_product.price and card_product.available -%}
                <span
                  id="NoMediaStandardBadge-{{ section_id }}-{{ card_product.id }}"
                  class="badge badge--bottom-left color-{{ card_badge_color_scheme }}"
                >
                  {% assign percentage_saved = card_product.compare_at_price
                    | minus: card_product.price
                    | times: 100.0
                    | divided_by: card_product.compare_at_price
                    | floor
                  %}
                  {% assign percentage_saved_string = percentage_saved | append: '%' %}
                  {% assign savings_amount = card_product.compare_at_price | minus: card_product.price | money %}
                  {% render 'icon-discount' %}
                  <span class="nowrap">
                    {{-
                      settings.sale_badge_text_html
                      | replace: '[percentage]', percentage_saved_string
                      | replace: '[amount]', savings_amount
                    -}}
                  </span>
                </span>
              {%- endif -%}
            </div>
          {% endif %}
        </div>
        {% assign card_cta_type = settings.card_cta_type %}
        {% if product_card_has_custom_settings %}
          {% assign card_cta_type = section.settings.card_cta_type %}
        {% endif %}
        {% assign card_button_main_color = settings.card_button_main_color %}
        {% if product_card_has_custom_settings %}
          {% assign card_button_main_color = section.settings.card_button_main_color %}
        {% endif %}
        {% assign card_button_secondary_color = settings.card_button_secondary_color %}
        {% if product_card_has_custom_settings %}
          {% assign card_button_secondary_color = section.settings.card_button_secondary_color %}
        {% endif %}
        {% assign card_button_tertiary_color = settings.card_button_tertiary_color %}
        {% if product_card_has_custom_settings %}
          {% assign card_button_tertiary_color = section.settings.card_button_tertiary_color %}
        {% endif %}
        {%- if card_cta_type == 'quick_view' -%}
          <div class="quick-add no-js-hidden">
            {%- liquid
              assign product_form_id = 'quick-add-' | append: section_id | append: card_product.id
              assign qty_rules = false
              if card_product.selected_or_first_available_variant.quantity_rule.min > 1 or card_product.selected_or_first_available_variant.quantity_rule.max != null or card_product.selected_or_first_available_variant.quantity_rule.increment > 1
                assign qty_rules = true
              endif
            -%}
            {%- if card_product.variants.size > 1 or qty_rules -%}
              <modal-opener data-modal="#QuickAdd-{{ card_product.id }}">
                <button
                  id="{{ product_form_id }}-submit"
                  type="submit"
                  name="add"
                  class="quick-add__submit button button--full-width button--secondary{% if horizontal_quick_add %} card--horizontal__quick-add animate-arrow{% endif %}"
                  aria-haspopup="dialog"
                  aria-labelledby="{{ product_form_id }}-submit title-{{ section_id }}-{{ card_product.id }}"
                  data-product-url="{{ card_product.url }}"
                >
                  <span class="quick-add__submit-text">
                    {{ 'products.product.quick_view' | t }}
                  </span>
                  <span class="icon-wrap">
                    <svg width="11" height="11" viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M5.15625 10.3125C4.673 10.3125 4.28125 9.92075 4.28125 9.4375V0.875C4.28125 0.391751 4.673 0 5.15625 0C5.6395 0 6.03125 0.391751 6.03125 0.875V9.4375C6.03125 9.92075 5.6395 10.3125 5.15625 10.3125ZM0.875 6.03125C0.391751 6.03125 0 5.6395 0 5.15625C0 4.673 0.391751 4.28125 0.875 4.28125H9.4375C9.92075 4.28125 10.3125 4.673 10.3125 5.15625C10.3125 5.6395 9.92075 6.03125 9.4375 6.03125H0.875Z" fill="{{ card_button_main_color }}"/>
                    </svg>
                  </span>
                  <div class="loading-overlay__spinner hidden">
                    <svg
                      aria-hidden="true"
                      focusable="false"
                      class="spinner"
                      viewBox="0 0 66 66"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                    </svg>
                  </div>
                </button>
              </modal-opener>
              <quick-add-modal id="QuickAdd-{{ card_product.id }}" class="quick-add-modal">
                <div
                  role="dialog"
                  aria-label="{{ 'products.product.choose_product_options' | t: product_name: card_product.title | escape }}"
                  aria-modal="true"
                  class="quick-add-modal__content global-settings-popup"
                  tabindex="-1"
                >
                  <button
                    id="ModalClose-{{ card_product.id }}"
                    type="button"
                    class="quick-add-modal__toggle"
                    aria-label="{{ 'accessibility.close' | t }}"
                  >
                    {% render 'icon-close' %}
                  </button>
                  <div id="QuickAddInfo-{{ card_product.id }}" class="quick-add-modal__content-info"></div>
                </div>
              </quick-add-modal>
            {%- else -%}
              <product-form>
                {%- form 'product',
                  card_product,
                  id: product_form_id,
                  class: 'form',
                  novalidate: 'novalidate',
                  data-type: 'add-to-cart-form'
                -%}
                  <input
                    type="hidden"
                    name="id"
                    value="{{ card_product.selected_or_first_available_variant.id }}"
                    disabled
                  >
                  <button
                    id="{{ product_form_id }}-submit"
                    type="submit"
                    name="add"
                    class="quick-add__submit button button--full-width button--secondary{% if horizontal_quick_add %} card--horizontal__quick-add{% endif %}"
                    aria-haspopup="dialog"
                    aria-labelledby="{{ product_form_id }}-submit title-{{ section_id }}-{{ card_product.id }}"
                    aria-live="polite"
                    data-sold-out-message="true"
                    {% if card_product.selected_or_first_available_variant.available == false %}
                      disabled
                    {% endif %}
                  >
                    <span class="quick-add__submit-text">
                      {%- if card_product.selected_or_first_available_variant.available -%}
                        {{ 'products.product.add_to_cart' | t }}
                      {%- else -%}
                        {{ 'products.product.sold_out' | t }}
                      {%- endif -%}
                    </span>
                    <span class="sold-out-message hidden">
                      {{ 'products.product.sold_out' | t }}
                    </span>
                      <span class="icon-wrap">
                        <svg width="11" height="11" viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M5.15625 10.3125C4.673 10.3125 4.28125 9.92075 4.28125 9.4375V0.875C4.28125 0.391751 4.673 0 5.15625 0C5.6395 0 6.03125 0.391751 6.03125 0.875V9.4375C6.03125 9.92075 5.6395 10.3125 5.15625 10.3125ZM0.875 6.03125C0.391751 6.03125 0 5.6395 0 5.15625C0 4.673 0.391751 4.28125 0.875 4.28125H9.4375C9.92075 4.28125 10.3125 4.673 10.3125 5.15625C10.3125 5.6395 9.92075 6.03125 9.4375 6.03125H0.875Z" {% if card_product.selected_or_first_available_variant.available == false %}
                            fill="none"
                          {% else %}
                            fill="{{ card_button_main_color }}
                          {% endif %}"/>
                        </svg>
                      </span>
                    <div class="loading-overlay__spinner hidden">
                      <svg
                        aria-hidden="true"
                        focusable="false"
                        class="spinner"
                        viewBox="0 0 66 66"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                      </svg>
                    </div>
                  </button>
                {%- endform -%}
              </product-form>
            {%- endif -%}
          </div>
        {% elsif card_cta_type == 'choose_options' or card_cta_type == 'add_to_cart' %}
          {%- assign product_form_id_custom = 'product-card-form-' | append: card_product.id -%}

          {% if card_cta_type == 'choose_options' %}
            {% if card_product.has_only_default_variant %}
              <div
                class="card-product-variant-selector"
                id="variant-selector-{{ card_product.id }}"
                data-product-form-id="{{ product_form_id_custom }}"
                {% if card_product.variants.first.available == false %}
                  style="background:none;"
                {% endif %}
              >
                <product-form>
                  {%- form 'product',
                    card_product,
                    id: product_form_id_custom,
                    class: 'form',
                    novalidate: 'novalidate',
                    data-type: 'add-to-cart-form'
                  -%}
                    <input
                      type="hidden"
                      name="id"
                      data-selected-id="{{ card_product.first_available_variant.id }}"
                      value="{{ card_product.first_available_variant.id }}"
                      disabled
                      class="product-variant-id"
                    >
                    <button
                      id="{{ product_form_id_custom }}-submit"
                      type="submit"
                      name="add"
                      class="quick-add__submit quick-add__submit_one_variant button button--full-width button--secondary{% if horizontal_quick_add %} card--horizontal__quick-add{% endif %}"
                      aria-haspopup="dialog"
                      aria-labelledby="{{ product_form_id_custom }}-submit title-{{ section_id }}-{{ card_product.id }}"
                      aria-live="polite"
                      data-sold-out-message="true"
                      {% if card_product.variants.first.available == false %}
                        disabled
                      {% endif %}
                    >
                      <span class="quick-add__submit-text">
                        {%- if card_product.first_available_variant.available -%}
                          {{ 'products.product.add_to_cart' | t }}
                        {%- else -%}
                          {{ 'products.product.sold_out' | t }}
                        {%- endif -%}
                      </span>
                      <span class="sold-out-message hidden">
                        {{ 'products.product.sold_out' | t }}
                      </span>
                      <span class="icon-wrap">
                        <svg width="11" height="11" viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M5.15625 10.3125C4.673 10.3125 4.28125 9.92075 4.28125 9.4375V0.875C4.28125 0.391751 4.673 0 5.15625 0C5.6395 0 6.03125 0.391751 6.03125 0.875V9.4375C6.03125 9.92075 5.6395 10.3125 5.15625 10.3125ZM0.875 6.03125C0.391751 6.03125 0 5.6395 0 5.15625C0 4.673 0.391751 4.28125 0.875 4.28125H9.4375C9.92075 4.28125 10.3125 4.673 10.3125 5.15625C10.3125 5.6395 9.92075 6.03125 9.4375 6.03125H0.875Z" fill="{{ card_button_main_color }}"/>
