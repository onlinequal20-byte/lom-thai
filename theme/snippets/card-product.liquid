            {% else %}
                  <!-- Choose Option Button -->
            <div class="quick-add no-js-hidden">
              <button
                id="choose-option-{{ card_product.id }}"
                type="button"
                class="choose-option__button quick-add__submit button button--full-width button--secondary{% if horizontal_quick_add %} card--horizontal__quick-add animate-arrow{% endif %}"
                data-product-id="{{ card_product.id }}"
                data-form-id="{{ product_form_id_custom }}"
                aria-expanded="false"
                aria-controls="variant-selector-{{ card_product.id }}"
                data-show-options-text="{{ 'products.product.choose_options' | t }}"
                data-hide-options-text="{{ 'products.product.hide_options' | t }}"
              >
                <span class="choose-option__text">
                  {{ 'products.product.choose_options' | t }}
                </span>
                <span class="icon-wrap">
                  <svg width="11" height="11" viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5.15625 10.3125C4.673 10.3125 4.28125 9.92075 4.28125 9.4375V0.875C4.28125 0.391751 4.673 0 5.15625 0C5.6395 0 6.03125 0.391751 6.03125 0.875V9.4375C6.03125 9.92075 5.6395 10.3125 5.15625 10.3125ZM0.875 6.03125C0.391751 6.03125 0 5.6395 0 5.15625C0 4.673 0.391751 4.28125 0.875 4.28125H9.4375C9.92075 4.28125 10.3125 4.673 10.3125 5.15625C10.3125 5.6395 9.92075 6.03125 9.4375 6.03125H0.875Z" fill="{{ card_button_main_color }}"/>
