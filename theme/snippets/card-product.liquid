              </product-form>
            </div>
            {% endif %}
        
          {% else %}
            <!-- Direct Add to Cart for add_to_cart type -->
            <div class="card-product-variant-selector" data-product-form-id="{{ product_form_id_custom }}"
              {% unless card_product.first_available_variant.available  %}
                style="background:none;"
              {% endunless %}
            >
              <product-form>
                {%- form 'product',
                  card_product,
                  id: product_form_id_custom,
                  class: 'form',
                  novalidate: 'novalidate',
                  data-type: 'add-to-cart-form'
                -%}
                  <input
                    type="hidden"
                    name="id"
                    data-selected-id="{{ card_product.first_available_variant.id }}"
                    value="{{ card_product.first_available_variant.id }}"
                    disabled
                    class="product-variant-id"
                  >
                  <button
                    id="{{ product_form_id_custom }}-submit"
                    type="submit"
                    name="add"
                    class="quick-add__submit quick-add__submit-add-to-cart button button--full-width button--secondary{% if horizontal_quick_add %} card--horizontal__quick-add{% endif %}"
                    aria-haspopup="dialog"
                    aria-labelledby="{{ product_form_id_custom }}-submit title-{{ section_id }}-{{ card_product.id }}"
                    aria-live="polite"
                    data-sold-out-message="true"
                    {% unless card_product.first_available_variant.available  %}
                      disabled
                    {% endunless %}
                  >
                    <span class="quick-add__submit-text">
                      {%- if card_product.first_available_variant.available -%}
                        {{ 'products.product.add_to_cart' | t }}
                      {%- else -%}
                        {{ 'products.product.sold_out' | t }}
                      {%- endif -%}
                    </span>
                    <span class="sold-out-message hidden">
                      {{ 'products.product.sold_out' | t }}
                    </span>
                    <span class="icon-wrap">
                      {%  assign fill = card_button_main_color %}
                      {% unless card_product.first_available_variant.available  %}
                        {% assign fill = 'none' %}
                      {% endunless %}
                      <svg width="11" height="11" viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M5.15625 10.3125C4.673 10.3125 4.28125 9.92075 4.28125 9.4375V0.875C4.28125 0.391751 4.673 0 5.15625 0C5.6395 0 6.03125 0.391751 6.03125 0.875V9.4375C6.03125 9.92075 5.6395 10.3125 5.15625 10.3125ZM0.875 6.03125C0.391751 6.03125 0 5.6395 0 5.15625C0 4.673 0.391751 4.28125 0.875 4.28125H9.4375C9.92075 4.28125 10.3125 4.673 10.3125 5.15625C10.3125 5.6395 9.92075 6.03125 9.4375 6.03125H0.875Z" fill="{{ fill }}"/>
                      </svg>
                    </span>
                    <div class="loading-overlay__spinner hidden">
                      <svg
                        aria-hidden="true"
                        focusable="false"
                        class="spinner"
                        viewBox="0 0 66 66"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                      </svg>
                    </div>
                  </button>
                {%- endform -%}
              </product-form>
            </div>
          {% endif %}
        {%- endif -%}
        {%- if card_product.media.size > 1 and product_card_use_slider_images -%}
          <button class="product-card-slider__nav product-card-slider__nav--prev" type="button" aria-label="Previous image" disabled>
            <svg width="41" height="41" viewBox="0 0 41 41" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="20.5" cy="20.5" r="20" fill="white" stroke="#C9C9C9"></circle>
              <path fill-rule="evenodd" clip-rule="evenodd" d="M16.3723 20.1023L22.4747 14L24 15.5253L18.6603 20.865L24 26.2047L22.4747 27.73L16.3723 21.6277C16.1701 21.4254 16.0565 21.151 16.0565 20.865C16.0565 20.579 16.1701 20.3046 16.3723 20.1023Z" fill="black"></path>
            </svg>
          </button>
          
          <button class="product-card-slider__nav product-card-slider__nav--next" type="button" aria-label="Next image">
            <svg width="41" height="41" viewBox="0 0 41 41" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="20.5" cy="20.5" r="20" fill="white" stroke="#C9C9C9"></circle>
              <path fill-rule="evenodd" clip-rule="evenodd" d="M24.6277 21.6277L18.5253 27.73L17 26.2047L22.3397 20.865L17 15.5253L18.5253 14L24.6277 20.1023C24.8299 20.3046 24.9435 20.579 24.9435 20.865C24.9435 21.151 24.8299 21.4254 24.6277 21.6277Z" fill="black"></path>
            </svg>
          </button>
        {%- endif -%}
      </div>
      <div class="card__content">
        <div class="card__information">
          <div class="card-information">
            {%- if product_card_has_custom_settings and show_vendor -%}
              <span class="visually-hidden">{{ 'accessibility.vendor' | t }}</span>
              <div class="caption-with-letter-spacing">{{ card_product.vendor }}</div>
            {%- elsif settings.product_card_show_vendor and product_card_has_custom_settings == false -%}
              <span class="visually-hidden">{{ 'accessibility.vendor' | t }}</span>
              <div class="caption-with-letter-spacing">{{ card_product.vendor }}</div>
            {%- endif -%}
            <h3
              class="card__heading"
              {% if card_product.featured_media %}
                id="title-{{ section_id }}-{{ card_product.id }}"
              {% endif %}
            >
              <a
                href="{{ card_product.url }}"
                id="CardLink-{{ section_id }}-{{ card_product.id }}"
                class="full-unstyled-link"
                aria-labelledby="CardLink-{{ section_id }}-{{ card_product.id }} Badge-{{ section_id }}-{{ card_product.id }}"
              >
                <div class="rte body">
                  <p>
                    {{ card_product.title | escape }}
                  </p>
                </div>
              </a>
            </h3>
            <span class="caption-large light">{{ block.settings.description | escape }}</span>

            {%- if show_rating and card_product.metafields.reviews.rating.value != blank -%}
              {% liquid
                assign rating_decimal = 0
                assign decimal = card_product.metafields.reviews.rating.value.rating | modulo: 1
                if decimal >= 0.3 and decimal <= 0.7
                  assign rating_decimal = 0.5
                elsif decimal > 0.7
                  assign rating_decimal = 1
                endif
              %}
              <div
                class="rating"
                role="img"
                aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: card_product.metafields.reviews.rating.value, rating_max: card_product.metafields.reviews.rating.value.scale_max }}"
              >
                <span
                  aria-hidden="true"
                  class="rating-star color-icon-{{ settings.accent_icons }}"
                  style="--rating: {{ card_product.metafields.reviews.rating.value.rating | floor }}; --rating-max: {{ card_product.metafields.reviews.rating.value.scale_max }}; --rating-decimal: {{ rating_decimal }};"
                ></span>
              </div>
              <p class="rating-text caption">
                <span aria-hidden="true">
                  {{- card_product.metafields.reviews.rating.value }} /
                  {{ card_product.metafields.reviews.rating.value.scale_max -}}
                </span>
              </p>
              <p class="rating-count caption">
                <span aria-hidden="true">({{ card_product.metafields.reviews.rating_count }})</span>
                <span class="visually-hidden">
                  {{- card_product.metafields.reviews.rating_count }}
                  {{ 'accessibility.total_reviews' | t -}}
                </span>
              </p>
            {%- endif -%}

            {% render 'price', product: card_product, price_class: '', hide_currency_code: true %}
            {% assign card_stock_indicator_svg_color_1 = settings.card_stock_indicator_svg_color_1 %}
            {% if product_card_has_custom_settings %}
              {% assign card_stock_indicator_svg_color_1 = section.settings.card_stock_indicator_svg_color_1 %}
            {% endif %}
            {% assign card_stock_indicator_svg_color_2 = settings.card_stock_indicator_svg_color_2 %}
            {% if product_card_has_custom_settings %}
              {% assign card_stock_indicator_svg_color_2 = section.settings.card_stock_indicator_svg_color_2 %}
            {% endif %}
            
            <div class="product-stock">
              {%- if card_product.selected_or_first_available_variant.inventory_management == 'shopify' -%}
                <p
                  class="product__inventory product-block-{{ block.id }} no-js-hidden {% if card_product.selected_or_first_available_variant.inventory_management != 'shopify' %} visibility-hidden{% endif %}"
                  id="Inventory-{{ section.id }}"
                  role="status"
                >
                  {%- if card_product.selected_or_first_available_variant.inventory_quantity > 0 -%}
                    {%- if card_product.selected_or_first_available_variant.inventory_quantity
                        <= block.settings.inventory_threshold
                    -%}
                    <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <circle cx="7" cy="7" r="7" fill="{{ card_stock_indicator_svg_color_2 }}" fill-opacity="0.3"/>
                      <circle cx="7" cy="7" r="2.625" fill="{{ card_stock_indicator_svg_color_1 }}"/>
                    </svg>
                      {%- if true -%}
                        <span class="product-stock-indicator__text">
                        {{-
                          'products.product.inventory_low_stock_show_count'
                          | t: quantity: card_product.selected_or_first_available_variant.inventory_quantity
                        -}}
                        </span>
                      {%- else -%}
                        {{- 'products.product.inventory_low_stock' | t -}}
                      {%- endif -%}
                    {%- else -%}
                      <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="7" cy="7" r="7" fill="{{ card_stock_indicator_svg_color_2 }}" fill-opacity="0.27"/>
                        <circle cx="7" cy="7" r="2.625" fill="{{ card_stock_indicator_svg_color_1 }}"/>
                      </svg>

                      {%- if true -%}
                        <span class="product-stock-indicator__text">
                        {{-
                          'products.product.inventory_in_stock_show_count'
                          | t: quantity: card_product.selected_or_first_available_variant.inventory_quantity
                        -}}
                        </span>
                      {%- else -%}
                        <span class="product-stock-indicator__text">
                        {{- 'products.product.inventory_in_stock' | t -}}
                        </span>
                      {%- endif -%}
                    {%- endif -%}
                  {%- else -%}
                    {%- if card_product.selected_or_first_available_variant.inventory_policy == 'continue' -%}
                      <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="7" cy="7" r="7" fill="{{ card_stock_indicator_svg_color_2 }}" fill-opacity="0.27"/>
                        <circle cx="7" cy="7" r="2.625" fill="{{ card_stock_indicator_svg_color_1 }}"/>
                      </svg>

                      <span class="product-stock-indicator__text">
                      {{- 'products.product.inventory_out_of_stock_continue_selling' | t -}}
                      </span>
                    {%- else -%}
                      <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="7" cy="7" r="7" fill="{{ card_stock_indicator_svg_color_2 }}" fill-opacity="0.3"/>
                        <circle cx="7" cy="7" r="2.625" fill="{{ card_stock_indicator_svg_color_1 }}"/>
                      </svg>
                      <span class="product-stock-indicator__text">
                      {{- 'products.product.inventory_out_of_stock' | t -}}
                      </span>
                    {%- endif -%}
                  {%- endif -%}
                </p>
              {%- endif -%}
            </div>
          </div>
        </div>
        {% assign product_card_badge_position = settings.badge_position %}
        {% if product_card_has_custom_settings %}
          {% assign product_card_badge_position = section.settings.badge_position %}
        {% endif %}
        {% assign product_card_badge_color_scheme = settings.sale_badge_color_scheme %}
        {% if product_card_has_custom_settings %}
          {% assign product_card_badge_color_scheme = section.settings.sale_badge_color_scheme %}
        {% endif %}
        <div class="card__badge {{ product_card_badge_position }}">
          {%- if card_product.available == false -%}
            <span
              id="Badge-{{ section_id }}-{{ card_product.id }}"
              class="badge badge--bottom-left"
            >
              {{- 'products.product.sold_out' | t -}}
            </span>
          {%- elsif card_product.compare_at_price > card_product.price and card_product.available -%}
            <span
              id="Badge-{{ section_id }}-{{ card_product.id }}"
              class="badge badge--bottom-left color-{{ product_card_badge_color_scheme }}"
            >
              {{
                card_product.compare_at_price
                | minus: card_product.price
                | times: 100.0
                | divided_by: card_product.compare_at_price
                | floor
              -}}
              %
            </span>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
{%- else -%}
  {%- liquid
    assign card_color_scheme = settings.collection_card_color_scheme
    if custom_color_scheme
      assign card_color_scheme = custom_color_scheme
    endif
  -%}
