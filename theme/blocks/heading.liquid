{%- style -%}
  #{{ parent_id }} {
         --heading-size: {{ block.settings.heading_size }}px;
         --heading-color: {{ block.settings.heading_color }};
       }
   #{{ parent_id }} .heading_block-{{block.id }} {
     font-size: var(--heading-size) !important;
     line-height: 100%;
     color: var(--heading-color) !important;
     --color-highlighted-color:  {{ block.settings.bolded_heading_color }};
     margin: 0;
     padding-top: {{ block.settings.headig_padding_top }}px;
     padding-bottom: {{ block.settings.headig_padding_bottom }}px;
   }
   @media (max-width: 990px) {
       #{{ parent_id }} {
         --heading-size: {{ block.settings.heading_mob_size }}px;
       }
     }
     {%- if block.settings.heading_use_gradient -%}
       #{{ parent_id }} .heading_block-{{block.id }} strong {
         background: {% if block.settings.heading_gradient_color != blank %}{{ block.settings.heading_gradient_color }}{% else %}var(--color-highlighted-color){% endif %};
         -webkit-background-clip: text;
         background-clip: text;
         color: transparent;
       }
     {%- endif -%}
{%- endstyle -%}
{%- if block.settings.heading != blank -%}
  <{{ block.settings.heading_tag }} class="heading_block-{{block.id }} {{ class_list }}" {{ block.shopify_attributes }}>
    {{- block.settings.heading -}}
  </{{ block.settings.heading_tag }}>
{%- endif -%}
{% schema %}
{
  "name": "t:blocks.heading.name",
  "tag": null,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "t:blocks.heading.settings.heading.label",
      "default": "Heading"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "t:blocks.heading.settings.heading_tag.label",
      "options": [
        { "value": "h1", "label": "t:blocks.heading.settings.heading_tag.options.h1" },
        { "value": "h2", "label": "t:blocks.heading.settings.heading_tag.options.h2" },
        { "value": "h3", "label": "t:blocks.heading.settings.heading_tag.options.h3" },
        { "value": "h4", "label": "t:blocks.heading.settings.heading_tag.options.h4" },
        { "value": "h5", "label": "t:blocks.heading.settings.heading_tag.options.h5" },
        { "value": "h6", "label": "t:blocks.heading.settings.heading_tag.options.h6" }
      ],
      "default": "h3"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "t:blocks.heading.settings.heading_size.label",
      "default": 40
    },
    {
      "type": "range",
      "id": "reasons_mob_heading_size",
      "min": 10,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "t:blocks.heading.settings.reasons_mob_heading_size.label",
      "default": 28
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "t:blocks.heading.settings.heading_color.label",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "bolded_heading_color",
      "label": "t:blocks.heading.settings.bolded_heading_color.label",
      "default": "#000000"
    },
    {
      "type": "checkbox",
      "id": "heading_use_gradient",
      "label": "t:blocks.heading.settings.heading_use_gradient.label",
      "info": "t:blocks.heading.settings.heading_use_gradient.info",
      "default": false
    },
    {
      "type": "color_background",
      "id": "heading_gradient_color",
      "label": "t:blocks.heading.settings.heading_gradient_color.label",
      "visible_if": "{{ block.settings.heading_use_gradient }}",
      "default": "linear-gradient(180deg, rgba(234, 56, 133, 1), rgba(95, 77, 188, 1) 100%)"
    },
    {
      "type": "header",
      "content": "t:blocks.heading.settings.layout_header.content"
    },
    {
      "type": "range",
      "id": "headig_padding_top",
      "label": "t:blocks.heading.settings.headig_padding_top.label",
      "min": 0,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "headig_padding_bottom",
      "label": "t:blocks.heading.settings.headig_padding_bottom.label",
      "min": 0,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "t:blocks.heading.presets.name"
    }
  ]
}
{% endschema %}
