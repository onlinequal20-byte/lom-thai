{% style %}
  .product-block-{{ block.id }} .product-add-ons-content {
    display: flex;
    flex-direction: column;
    width: 100%;
    border: 1px solid {{ block.settings.container_border_color | default: '#E5E5E5' }};
    border-radius: {{ block.settings.container_border_radius | default: 8 }}px;
    background-color: {{ block.settings.container_background | default: '#F9F9F9' }};
  }
  .product-block-{{ block.id }} .product-add-ons-content-item {
      border-top: 1px solid {{ block.settings.container_border_color | default: '#E5E5E5' }};
   }
    .product-block-{{ block.id }} .product-add-ons-content-item:nth-of-type(1) {
      border-top: none;
    }

    .product-block-{{ block.id }} .product-add-ons-content-item__desc-title {
      font-family: var(--font-heading-family);
      font-weight: 500;
      font-size: {{ block.settings.product_title_font_size | default: 14 }}px;
      color: {{ block.settings.product_title_color | default: '#000000' }};
      margin: 0;
      margin-bottom: 12px;
      line-height: 100%;
    } 
    {% if block.settings.layout == 'horizontal' %}
      @media screen and (max-width: 768px) {
        .product-block-{{ block.id }} .product-add-ons-content-item__desc-title {
          height: calc(1* {{ block.settings.product_title_font_size | default: 14 }}px);
          min-height: calc(1* {{ block.settings.product_title_font_size | default: 14 }}px);
          overflow: hidden;
          display: -webkit-box;
          -webkit-line-clamp: 1;
          -webkit-box-orient: vertical;
        }
      }
    {% endif %}
    .product-add-ons-content-item__desc-text:empty {
      display: block;
    }
    .product-block-{{ block.id }} .product-add-ons-content-item__desc-text {
      font-family: var(--font-body-family);
      font-weight: 300;
      font-size: {{ block.settings.product_description_font_size | default: 12 }}px;
      color: {{ block.settings.product_description_color | default: '#666666' }};
      margin: 0;
      line-height: calc(100% + 4px);

    }
    {% if block.settings.layout == 'horizontal' %}
      @media screen and (max-width: 768px) {
        .product-block-{{ block.id }} .product-add-ons-content-item__desc-text {

      min-height: calc(2 * {{ block.settings.product_description_font_size | plus: 4 | default: 12 }}px);
      height: calc(2 * {{ block.settings.product_description_font_size | plus: 4 | default: 12 }}px);
      overflow: hidden;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
    }
      }
    {% endif %}
    .product-block-{{ block.id }} .product-add-ons-content-item__price-value {
      font-family: var(--font-body-family);
      font-weight: 600;
      font-size: {{ block.settings.price_font_size | default: 14 }}px;
      line-height: 100%;
      letter-spacing: 0%;
      color: {{ block.settings.price_color | default: '#000000' }};
    }

    .product-block-{{ block.id }} .product-add-ons-content-item__compare-price {
      font-family: var(--font-body-family);
      font-weight: 400;
      font-size: {{ block.settings.price_font_size | default: 14 }}px;
      line-height: 100%;
      letter-spacing: 0%;
      text-decoration: line-through;
      color: {{ block.settings.compare_price_color | default: '#666666' }};
    }

    .product-block-{{ block.id }} .product-add-ons-content-item__image {
      width: {{ block.settings.image_width | default: 52 }}px;
      height: {{ block.settings.image_height | default: 50 }}px;
      display: flex;
      border-radius: {{ block.settings.image_border_radius | default: 6 }}px;
      overflow: hidden;
    }

    .product-block-{{ block.id }} .product-add-ons-content-item__image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .product-block-{{ block.id }} .product-add-ons-content-item__quick-view-button {
      background: none;
      border: none;
      width: fit-content;
      background-color: {{ block.settings.button_background | default: '#000000' }};
      height: {{ block.settings.button_height | default: 28 }}px;
      border-radius: {{ block.settings.button_border_radius | default: 6 }}px;
      color: {{ block.settings.button_text_color | default: '#FFFFFF' }};
      font-family: var(--font-body-family);
      font-weight: 500;
      font-size: {{ block.settings.button_font_size | default: 14 }}px;
      line-height: calc(100% + 4px);
      letter-spacing: unset;
      padding: 0 12px;
      text-decoration: none;
      display: flex;
      align-items: center;
      justify-content: center;
      min-width: unset;
      min-height: unset;
    }


  @media screen and (max-width: 768px) {
    .product-block-{{ block.id }} .product-add-ons-content {
      {% if block.settings.layout == 'horizontal' %}
        flex-direction: row;
        width: 100vw;
        padding-right: 4rem;
        gap: 9px;
        overflow: auto;
        border: none;
        border-radius: 0;
        background-color: transparent;
        scrollbar-width: none;
        -ms-overflow-style: none;
      {% endif %}
    }

    {% if block.settings.layout == 'horizontal' %}
      .product-block-{{ block.id }} .product-add-ons-content::-webkit-scrollbar {
        display: none;
      }
    {% endif %}

    {% if block.settings.layout == 'horizontal' %}
      .product-block-{{ block.id }} .product-add-ons-content-item {
        border: 1px solid {{ block.settings.container_border_color | default: '#E5E5E5' }};
        border-radius: {{ block.settings.container_border_radius | default: 8 }}px;
        background-color: {{ block.settings.container_background | default: '#F9F9F9' }};
        flex-shrink: 0;
        max-width: 342px;
      }

      .product-block-{{ block.id }} .product-add-ons-content-item:nth-child(1) {
        border-top: 1px solid {{ block.settings.container_border_color | default: '#E5E5E5' }};
      }
    {% endif %}
  }
{% endstyle %}

<div class="product-block-{{ block.id }}" {{ block.shopify_attributes }}>
  {% content_for 'block', type: '_add_ons_list', id: 'add_ons_list', button_text: block.settings.button_text %}
</div>

