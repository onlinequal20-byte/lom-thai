<a {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% else %}role="link" aria-disabled="true"{% endif %} class="scrolling-text-item-{{ section.id }}" {{ block.shopify_attributes }}>
    {% if block.settings.image != blank %}
      <img src="{{ block.settings.image | image_url: width: 500 }}" alt="{{ block.settings.image.alt }}" width="100" height="100">
    {% else %}
      {{ 'product-1' | placeholder_svg_tag }}
    {% endif %}
</a><!--@#$%-->
{% schema %}
{
  "name": "t:blocks._vertical_scrolling_image.name",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:blocks._vertical_scrolling_image.settings.image.label"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:blocks._vertical_scrolling_image.settings.link.label"
    }
  ],
  "presets": [
    {
      "name": "t:blocks._vertical_scrolling_image.presets.name"
    }
  ]
}
{% endschema %}
