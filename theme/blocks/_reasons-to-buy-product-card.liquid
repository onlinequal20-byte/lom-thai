    },
    {
      "type": "range",
      "label": "t:blocks._reasons_to_buy_product_card.settings.product_description_font_size.label",
      "id": "product_description_font_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "color",
      "id": "product_description_color",
      "label": "t:blocks._reasons_to_buy_product_card.settings.product_description_color.label",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "t:blocks._reasons_to_buy_product_card.settings.appearance_header.content"
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "t:blocks._reasons_to_buy_product_card.settings.card_background_color.label",
