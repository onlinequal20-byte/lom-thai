        "product_description_font_size": 14,
        "card_gradient": "linear-gradient(180deg, rgba(234, 56, 133, 1), rgba(95, 77, 188, 1) 100%)",
        "product_title_color": "#ffffff",
        "product_description_color": "#ffffff",
