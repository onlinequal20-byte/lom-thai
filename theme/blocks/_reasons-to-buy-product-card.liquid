      "type": "range",
      "label": "t:blocks._reasons_to_buy_product_card.settings.product_description_opacity.label",
      "id": "product_description_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 70
    },
    {
      "type": "color",
      "id": "arrow_icon_color",
      "label": "t:blocks._reasons_to_buy_product_card.settings.arrow_icon_color.label",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "label": "t:blocks._reasons_to_buy_product_card.settings.card_border_radius.label",
      "id": "card_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 10
    },
    {
      "type": "range",
      "label": "t:blocks._reasons_to_buy_product_card.settings.thumbnail_border_radius.label",
      "id": "thumbnail_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 4
    },
    {
      "type": "header",
      "content": "t:blocks._reasons_to_buy_product_card.settings.layout_header.content"
    },
    {
      "type": "range",
      "label": "t:blocks._reasons_to_buy_product_card.settings.text_content_gap.label",
      "id": "text_content_gap",
      "min": 0,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 19
    },
    {
      "type": "range",
      "label": "t:blocks._reasons_to_buy_product_card.settings.text_content_gap_mobile.label",
      "id": "text_content_gap_mobile",
      "min": 0,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 11
    }
  ],
  "presets": [
    {
      "name": "t:blocks._reasons_to_buy_product_card.presets.name",
      "settings": {
