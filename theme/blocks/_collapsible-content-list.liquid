
<style>
    {% if request.visual_preview_mode %}
      {% assign section_id_variable = 'id' %}
    {% else %}
      {% assign section_id_variable = section.id %}
    {% endif %}
    .singleAccordianContainer-{{ section_id_variable }} {
      {% if block.settings.rows_have_border %}
        border-bottom: {{ block.settings.rows_border_width }}px solid rgba({{ block.settings.rows_border_color.red }}, {{ block.settings.rows_border_color.green }}, {{ block.settings.rows_border_color.blue }}, {{ block.settings.rows_border_color_opacity | divided_by: 100.0 }});
      {% else %}
        background-color: {{ block.settings.row_container_bg_color_scheme }};
        border-radius: {{ block.settings.border_radius }}px;
      {% endif %}
  }
  {% if block.settings.rows_have_border %}
    .singleAccordianContainer-{{ section_id_variable }}:first-of-type {
        border-top: {{ block.settings.rows_border_width }}px solid rgba({{ block.settings.rows_border_color.red }}, {{ block.settings.rows_border_color.green }}, {{ block.settings.rows_border_color.blue }}, {{ block.settings.rows_border_color_opacity | divided_by: 100.0 }});
    }
  {% endif %}

  .accordionButtonStyle-{{ section_id_variable }} {
    border: none;
    display: block;
    background-color: transparent;
    color: #444;
    cursor: pointer;
    padding: {{ block.settings.vertical_padding }}px {{ block.settings.horizontal_padding }}px;
    width: 100%;
    text-align: left;
    outline: none;
    transition: 0.1s;
    cursor: pointer;
    -ms-touch-action: manipulation;
    touch-action: manipulation;
    -webkit-tap-highlight-color: transparent;
  }
  
  .allAccordionButtonsContainer-{{ section_id_variable }} {
    display: flex;
    flex-direction: column;
    {% if block.settings.rows_have_border == false%}
      gap: {{  block.settings.row_gap }}px; 
    {% endif %} 
  }
  .panelStyle-{{ section_id_variable }} p {
    line-height: 1.4em;
      margin-top: 0px;
      margin-bottom: {{ block.settings.vertical_padding }}px !important;
  }

  {% if block.settings.title_row_has_underline_on_hover %}
    .accordionButtonStyle-{{ section_id_variable }}:hover .collapsibleTitleSpan-{{ section_id_variable }} {
      text-decoration: underline;
    }
  {% endif %}
  .accordionButtonStyle-{{ section_id_variable }} .index-number {
    font-size: {{ block.settings.index_number_size | divided_by: 2 }}px;
    color: {{ block.settings.index_number_color }};
    width: {{ block.settings.index_number_size }}px;
    height: {{ block.settings.index_number_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.index_number_background_color }};
    border-radius: 50%;
    flex-shrink: 0;
    line-height: 100%;
  }
  
  .panelStyle-{{ section_id_variable }} {
    padding: 0 {{ block.settings.horizontal_padding }}px;
    padding-left: calc({{ block.settings.horizontal_padding }}px + {{ block.settings.index_number_size }}px + 14px);
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-in-out;
  }
  .icon-minus-{{ section_id_variable }},
  .icon-plus-{{ section_id_variable }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
  }
  .icon-minus-{{ section_id_variable }} path,
  .icon-plus-{{ section_id_variable }} path {
    fill: {{ block.settings.icon_color }};
  }
  .allAccordionButtonsContainer-{{ section_id_variable }} .collapsibleTitleSpan-{{ section_id_variable }} {
    font-size: {{ block.settings.heading_font_size }}px;
  }
  @media (max-width: 768px) {
    .allAccordionButtonsContainer-{{ section_id_variable }} .collapsibleTitleSpan-{{ section_id_variable }} {
      font-size: {{ block.settings.heading_font_size_mobile }}px;
    }
  }
  .allAccordionButtonsContainer-{{ section_id_variable }} .panelStyle-{{ section_id_variable }} p {
    font-size: {{ block.settings.body_font_size }}px;
  }
  @media (max-width: 768px) {
    .allAccordionButtonsContainer-{{ section_id_variable }} .panelStyle-{{ section_id_variable }} p {
      font-size: {{ block.settings.body_font_size_mobile }}px;
    }
  }
</style>
{% capture rows %}
  {% content_for 'blocks' %}
{% endcapture %}
{% assign rows = rows | split: '<!-- end block -->' %}

<div class="allAccordionButtonsContainer-{{ section_id_variable }} fade-in-child" {{ block.shopify_attributes }}>
 {% for row in rows %} 
    {% if row contains '<!--@#$%-->' %}
      {% assign row_new = row | replace: '<!--@#$%-->', forloop.index  %}
      {{ row_new }}
    {% else %}
      {{ row }}
    {% endif %}
 {% endfor %}
</div>
