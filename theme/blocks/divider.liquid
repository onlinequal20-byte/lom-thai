{% assign product = closest.product %}
<div class="product-block-{{ block.id }}" {{ block.shopify_attributes }}>
  {% style %}
    .product-block-{{ block.id }} {
      padding-top: {{ block.settings.padding_top }}px;
      padding-bottom: {{ block.settings.padding_bottom }}px;
    }

    .product-block-{{ block.id }} .divider-line {
      width: 100%;
      height: {{ block.settings.divider_height | default: 1 }}px;
      display: block;
      background-color: {{ block.settings.divider_color | default: '#000000' }};
      opacity: {{ block.settings.divider_opacity | default: 20 | divided_by: 100.0 }};
    }

    .product-block-{{ block.id }} .divider-line svg {
      width: 100%;
      height: {{ block.settings.divider_height | default: 1 }}px;
      display: block;
    }
    
    .product-block-{{ block.id }} .divider-line svg path {
      fill: {{ block.settings.divider_color | default: '#000000' }};
      opacity: {{ block.settings.divider_opacity | default: 20 | divided_by: 100.0 }};
    }
    @media screen and (max-width: 768px) {
      .product-block-{{ block.id }} {
        padding-top: {{block.settings.padding_top_mobile }}px;
        padding-bottom: {{block.settings.padding_bottom_mobile }}px;
      }
    }
  {% endstyle %}
  <div class="divider-line">
    {% render 'icon-divider-line' %}
  </div>
</div>

{% schema %}
{
  "name": "t:blocks.divider.name",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "t:blocks.divider.settings.style_header.content"
    },
    {
      "type": "range",
      "id": "divider_height",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "t:blocks.divider.settings.divider_height.label",
      "default": 1
    },
    {
      "type": "color",
      "id": "divider_color",
      "label": "t:blocks.divider.settings.divider_color.label",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "divider_opacity",
      "min": 10,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "t:blocks.divider.settings.divider_opacity.label",
      "default": 20
    },
    {
      "type": "header",
      "content": "t:blocks.divider.settings.padding_header.content"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "t:blocks.divider.settings.padding_top.label",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "t:blocks.divider.settings.padding_bottom.label",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "t:blocks.divider.settings.padding_top_mobile.label",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "t:blocks.divider.settings.padding_bottom_mobile.label",
      "default": 10
    }
  ],
  "presets": [
    {
      "name": "t:blocks.divider.presets.name",
      "category": "Product Information Layout"
    }
  ]
}
{% endschema %}
