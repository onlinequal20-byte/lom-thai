<!-- start _reasons-to-buy-content.liquid -->
<style>
  {% if request.visual_preview_mode %}
    {% assign section_id_selector = 'section' %}
    {% assign section_id_variable = 'id' %}
  {% else %}
    {% assign section_id_selector = '#shopify-section-' | append: section.id %}
    {% assign section_id_variable = section.id %}
  {% endif %}
  {{ section_id_selector }} {
      --subheading-size: {{ block.settings.subheading_size }}px;
      --subheading-color: {{ block.settings.subheading_color }};
      --subheading-bold-color: {{ block.settings.bolded_subheading_color }};
    }
    {{ section_id_selector }} .reasons-to-buy__text-content {
      display: flex;
      flex-direction: column;
      gap: {{ block.settings.content_gap }}px;
       text-align: {{ block.settings.content_alignment }};
     }
     @media screen and (max-width: 1200px) {
      {{ section_id_selector }} .reasons-to-buy__text-content {
        gap: {{ block.settings.content_gap_mobile }}px;
      }
     }

    {{ section_id_selector }} .reasons-to-buy__subheading,
    {{ section_id_selector }} .reasons-to-buy__subheading p {
      font-size: var(--subheading-size) !important;
      color: var(--subheading-color) !important;
      --color-highlighted-color: var(--subheading-bold-color);
      margin: 0;
      line-height: 100%;
    }
    {{ section_id_selector }} {
      --heading-size: {{ block.settings.heading_size }}px;
      --heading-mob-size: {{ block.settings.reasons_mob_heading_size }}px;
      --heading-color: {{ block.settings.heading_color }};
    }
    {{ section_id_selector }} .heading_block-{{block.id }} {
      font-size: var(--heading-size) !important;
      line-height: 100%;
      color: var(--heading-color) !important;
      margin: 0;
      padding-top: {{ block.settings.headig_padding_top }}px;
      padding-bottom: {{ block.settings.headig_padding_bottom }}px;
    }
    @media (max-width: 1200px) {
      {{ section_id_selector }} .heading_block-{{block.id }} {
          font-size: var(--heading-mob-size) !important;
        }
      }
      {%- if block.settings.heading_use_gradient -%}
        {{ section_id_selector }} .heading_block-{{block.id }} strong {
          background: {% if block.settings.heading_gradient_color != blank %}{{ block.settings.heading_gradient_color }}{% else %}var(--color-highlighted-color){% endif %};
          -webkit-background-clip: text;
          background-clip: text;
          color: transparent;
        }
      {% else %}
        {{ section_id_selector }} .heading_block-{{block.id }} strong {
          color: {{ block.settings.bolded_heading_color }};
        }
      {%- endif -%}
      {{ section_id_selector }} {
        --text-size: {{ block.settings.text_size }}px;
        --text-color: {{ block.settings.text_color }};
      }
  {{ section_id_selector }} .text_block-{{block.id }} {
    font-size: var(--text-size) !important;
    line-height: 100%;
    color: var(--text-color) !important;
    --color-highlighted-color:  {{ block.settings.bolded_text_color }};
    margin: 0;
    padding-top: {{ block.settings.text_padding_top }}px;
    padding-bottom: {{ block.settings.text_padding_bottom }}px;
  }
  @media (max-width: 1200px) {
      {{ section_id_selector }} {
        --text-size: {{ block.settings.text_mob_size }}px;
      }
    }
    {%- if block.settings.text_use_gradient -%}
      {{ section_id_selector }} .text_block-{{block.id }} strong {
        background: {{ block.settings.text_gradient_color }};
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
      }
    {% else %}
      {{ section_id_selector }} .text_block-{{block.id }} strong {
        color: {{ block.settings.bolded_text_color }};
      }
    {%- endif -%}
</style>
<div class="reasons-to-buy__text-content" {{ block.shopify_attributes }}>
  {%- if block.settings.heading != blank -%}
    <{{ block.settings.heading_tag }}
      class="heading_block-{{block.id }} {{ class_list }}"
      {{ block.shopify_attributes }}
    >
      {{- block.settings.heading -}}
    </{{ block.settings.heading_tag }}>
  {%- endif -%}
  {%- if block.settings.text != blank -%}
    <{{ block.settings.text_tag }} class="text_block-{{block.id }} {{ class_list }}" {{ block.shopify_attributes }}>
      {{- block.settings.text -}}
    </{{ block.settings.text_tag }}>
  {%- endif -%}
</div>
<!-- end _reasons-to-buy-content.liquid -->
