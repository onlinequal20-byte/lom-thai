<a class="scrolling-text-item-{{ section.id }}" {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% else %}role="link" aria-disabled="true"{% endif %} {{ block.shopify_attributes }}>
    {{ block.settings.title }}
</a><!--@#$%-->
{% schema %}
{
  "name": "t:blocks._vertical_scrolling_text.name",
  "tag": null,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "t:blocks._vertical_scrolling_text.settings.title.label"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:blocks._vertical_scrolling_text.settings.link.label"
    }
  ],
  "presets": [
    {
      "name": "t:blocks._vertical_scrolling_text.presets.name"
    }
  ]
}
{% endschema %}
