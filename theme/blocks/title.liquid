{% assign product = closest.product %}
<div class="product__title product-block-{{ block.id }}" {{ block.shopify_attributes }}>
                  {% style %}
                    .product-block-{{ block.id }}{
                      padding-top: {{block.settings.padding_top }}px;
                      padding-bottom: {{block.settings.padding_bottom }}px;
                    }
                    @media screen and (max-width: 768px) {
                      .product-block-{{ block.id }} {
                        padding-top: {{block.settings.padding_top_mobile }}px;
                        padding-bottom: {{block.settings.padding_bottom_mobile }}px;
                      }
                    }
                    #block-heading-{{ block.id }}.title{
                      font-family: var(--font-heading-family);
                      font-style: normal;
                      font-weight: 500 !important;
                      font-size: {{ block.settings.font_size | default: 28 }}px !important;
                      line-height: calc({{ block.settings.font_size | default: 28 }}px + 5px) !important;
                      color: {{ block.settings.title_color | default: 'rgb(var(--color-base-text))' }};
                    }
                    @media (max-width: 768px) {
                      #block-heading-{{ block.id }}.title{
                        font-size: {{ block.settings.mobile_font_size | default: 24 }}px !important;
                        line-height: calc({{ block.settings.mobile_font_size | default: 24 }}px + 6px) !important;
                        white-space: normal;
                      }
                    }
                  {% endstyle %}

                  <h1
                    id="block-heading-{{ block.id }}"
                    class="title {{ block.settings.text_size }}{% if block.settings.uppercase_title %} product-title--uppercase{% else %} product-title--nouppercase {% endif %}{% if block.settings.title_alignment == 'center' %} center{% else %} left{% endif %}{% if block.settings.mobile_title_alignment == 'center' %} mobile_center{% else %} mobile_left{% endif %}"
                  >
                    {{ product.title | escape }}
                  </h1>
                  <a href="{{ product.url }}" class="product__title">
                    <h2 class="h1">
                      {{ product.title | escape }}
                    </h2>
                  </a>
                </div>

{% schema %}
{
  "name": "t:sections.main-product.blocks.title.name",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "t:blocks.title.settings.alignment_header.content"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:blocks.title.settings.title_alignment.options.left"
        },
        {
          "value": "center",
          "label": "t:blocks.title.settings.title_alignment.options.center"
        }
      ],
      "default": "left",
      "label": "t:blocks.title.settings.title_alignment.label"
    },
    {
      "type": "select",
      "id": "mobile_title_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:blocks.title.settings.mobile_title_alignment.options.left"
        },
        {
          "value": "center",
          "label": "t:blocks.title.settings.mobile_title_alignment.options.center"
        }
      ],
      "default": "left",
      "label": "t:blocks.title.settings.mobile_title_alignment.label"
    },
    {
      "type": "header",
      "content": "t:blocks.title.settings.typography_header.content"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "t:blocks.title.settings.font_size.label",
      "default": 28
    },
    {
      "type": "range",
      "id": "mobile_font_size",
      "min": 12,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "t:blocks.title.settings.mobile_font_size.label",
      "default": 24
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "t:blocks.title.settings.title_color.label",
      "default": "#000000"
    },
    {
      "type": "checkbox",
      "id": "uppercase_title",
      "label": "t:blocks.title.settings.uppercase_title.label",
      "default": false
    },
    {
      "type": "header",
      "content": "t:blocks.title.settings.padding_header.content"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "t:blocks.title.settings.padding_top.label",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "t:blocks.title.settings.padding_bottom.label",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "t:blocks.title.settings.padding_top_mobile.label",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "t:blocks.title.settings.padding_bottom_mobile.label",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "t:blocks.title.presets.name",
      "category": "Product Information"
    }
  ]
}
{% endschema %}