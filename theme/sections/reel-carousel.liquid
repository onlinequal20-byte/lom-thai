                            image_size: '1100x',
                            loop: true,
                            class: 'carousel-image',
                            controls: false
                          }}{% endcapture %}
                          {% capture img_with_alt %}<img alt="{{ product.title }} video" loading="lazy" decoding="async" width="1100" height="1100">{% endcapture %}
                          {{ video_html | replace: "<img ", img_with_alt }}
                        {%- endif -%}
                        <button class="play-button-element full-size flex-center-center" aria-label="Play video" onclick="toggleVideoPlayback(event)">
                          <div aria-hidden="true" class="play-icon-container flex-center-center color-{{ section.settings.color_scheme }}">
