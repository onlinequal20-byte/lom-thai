{%- liquid
   assign global_heading_size = settings.enable_global_heading_font_size
   assign global_body_size = settings.enable_global_body_font_size
   assign global_color = settings.enable_global_color
-%}
{%  style  %}
  {%- if request.visual_preview_mode -%}
    {% comment %} don't want fade-in animation in preview mode because it messes up preview {% endcomment %}
    .animation_section,
    .animation_section * {
      opacity: 1 !important;
      transform: none !important;
      transition: none !important;
      will-change: auto !important;
    }
  {%- endif -%}
  
  #shopify-section-{{ section.id }} .section__customer_review {
    padding: 5px 0;
  }

  .sectionMargin{{ section.id }} {
    margin: 0;
  }

  .sectionPadding{{ section.id }} {
    padding: {{ section.settings.section_padding_top }}px 24px {{ section.settings.section_padding_bottom }}px;
  }

  #sectionHeading{{ section.id }} {
    text-align: center;
    font-size: {% if global_heading_size %}var(--font-heading-size){% else %}{{ section.settings.heading_font_size }}px{% endif %} !important;
    line-height: {% if global_heading_size %}calc(var(--font-heading-size) + 8px){% else %}{{ section.settings.heading_font_size | plus: 8 }}px{% endif %} !important;
    color: {% if global_color %}rgb(var(--color-base-heading)){% else %}{{ section.settings.heading_color }}{% endif %} !important;
    --color-highlighted-color: {{ section.settings.bolded_heading_color }};
    margin: 0;
  }

  #sectionHeading{{ section.id }} strong {
    {%- if section.settings.heading_use_gradient -%}
      background: {% if section.settings.heading_gradient_color != blank %}{{ section.settings.heading_gradient_color }}{% else %}var(--gradient-base-background-1){% endif %};
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
    {%- endif -%}
  }

  @media screen and (max-width: 768px) {
    #sectionHeading{{ section.id }} {
      font-size: {% if global_heading_size %}var(--font-heading-mob-size){% else %}{{ section.settings.mobile_heading_font_size }}px{% endif %} !important;
      line-height: {% if global_heading_size %}calc(var(--font-heading-mob-size) + 8px){% else %}{{ section.settings.mobile_heading_font_size | plus: 8 }}px{% endif %} !important;
    }
  }

  .overallRatingContainer{{ section.id }} {
    margin: 15px auto 0;
    display: flex;
    align-items: center;
    width: fit-content;
    padding: 4px 6px;
    {% if section.settings.overall_rating_use_gradient %}
      background: {{ section.settings.overall_rating_gradient_color }};
    {% else %}
      background: {{ section.settings.overall_rating_background_color }};
    {% endif %}
    border-radius: {{ section.settings.overall_rating_border_radius }}px;
  }

  .overallRatingText{{ section.id }} {
    display: flex;
    align-items: center;
    font-size: {{ section.settings.overall_rating_text_size }}px;
    line-height: 100%;
    color: {{ section.settings.overall_rating_text_color }};
  }

  .stars{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .stars{{ section.id }} img {
    object-fit: cover;
  }

  .stars{{ section.id }}.heading_stars svg,
  .stars{{ section.id }}.heading_stars img {
    width: {{ section.settings.overall_rating_star_size }}px;
    height: {{ section.settings.overall_rating_star_size }}px;
  }

  .swiperSliderOuterContainer{{ section.id }} {
    margin-top: 35px;
  }

  .leftRightButton{{ section.id }} {
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ section.settings.navgiation_button_background_color }};
    position: absolute;
    z-index: 3;
    border-radius: 100%;
    transform: translateY(-50%);
    top: 50%;
    border: {{ section.settings.navigation_button_border_width }}px solid rgba({{ section.settings.navigation_button_border_color.red }},{{ section.settings.navigation_button_border_color.green }},{{ section.settings.navigation_button_border_color.blue }},{{ section.settings.navigation_button_border_opacity | divided_by: 100.0 }});
    width: {{ section.settings.navigation_button_size }}px;
    height: {{ section.settings.navigation_button_size }}px;
    visibility: {% if section.settings.show_navigation_buttons %}visible{% else %}hidden{% endif %};
  }

  .reviewNameText{{ section.id }} {
    margin: 0 auto;
    font-size: 15px;
    line-height: 25px;
    color: #000;
    width: fit-content;
  }

  .prevButton{{ section.id }} {
    left: 2px;
  }

  .nextButton{{ section.id }} {
    right: 2px;
  }

  .prevButton{{ section.id }} svg {
    transform: translateX(1.5%);
    width: 70%;
    height: 70%;
  }

  .nextButton{{ section.id }} svg {
    transform: translateX(-1.5%);
    width: 70%;
    height: 70%;
  }

  .prevButton{{ section.id }} svg path,
  .nextButton{{ section.id }} svg path {
    fill: {{ section.settings.left_right_icon_color }};
  }

  .reviewSlideContainer{{ section.id }} {
    position: relative;
    display: flex !important;
    flex-direction: column;
    justify-content: space-between;
    border-radius: 15px;
    background-color: {{ section.settings.slide_background_color }};
    box-sizing: border-box;
    height: auto !important;
    {% if section.settings.slide_box_shadow %}
    box-shadow: 0px 0px 18px 0px {{ "#595959" | hex_to_rgba: 0.18 }};
    {% endif %}
  }

  .reviewContentContainer{{ section.id }} {
    padding: 43px 35px 28px 35px;
    position: relative;
    z-index: 3;
    height: 100%;
  }

  .reviewSlideContainer{{ section.id }}.swiper-slide {
    {% if section.settings.show_opacity_on_inactive_slides %}
      opacity: 0.5;
    {% endif %}
    transition: opacity 350ms;
    max-width: 370px;
  }
  @media(max-width: 1024px) {
    .reviewSlideContainer{{ section.id }}.swiper-slide {
      max-width: 100%;
    }
  }
  .reviewSlideContainer{{ section.id }}.swiper-slide-active {
    opacity: 1;
  }

  .reviewSlideContainer{{ section.id }}.highlighted {
    background: rgb(var(--color-background)) !important;
    border: 2px solid rgb(var(--color-foreground)) !important;
    position: relative;
  }

  .reviewSlideContainer{{ section.id }}.highlighted.color-accent-1 {
    background: rgb(var(--color-base-accent-1)) !important;
    border-color: rgb(var(--color-base-accent-1)) !important;
  }

  .reviewSlideContainer{{ section.id }}.highlighted.color-accent-2 {
    background: rgb(var(--color-base-accent-2)) !important;
    border-color: rgb(var(--color-base-accent-2)) !important;
  }

  .reviewSlideContainer{{ section.id }}.highlighted.color-accent-3 {
    background: rgb(var(--color-base-accent-3)) !important;
    border-color: rgb(var(--color-base-accent-3)) !important;
  }

  .reviewSlideContainer{{ section.id }}.highlighted.color-custom-color-1 {
    background: rgb(var(--color-base-custom-color-1)) !important;
    border-color: rgb(var(--color-base-custom-color-1)) !important;
  }

  .reviewSlideContainer{{ section.id }}.highlighted.color-custom-color-2 {
    background: rgb(var(--color-base-custom-color-2)) !important;
    border-color: rgb(var(--color-base-custom-color-2)) !important;
  }

  .reviewSlideContainer{{ section.id }}.highlighted.color-inverse {
    background: rgb(var(--color-base-background-2)) !important;
    border-color: rgb(var(--color-base-text)) !important;
  }

  .reviewSlideContainer{{ section.id }}.highlighted.color-gradient-background-1 {
    background: var(--gradient-base-background-1) !important;
    border: unset !important;
  }

  /* Highlighted review color overrides */
  .reviewSlideContainer{{ section.id }}.highlighted .slide_review_heading {
    color: {{ section.settings.highlight_review_heading_color }} !important;
    --color-highlighted-color: {{ section.settings.highlight_review_bolded_heading_color }};
  }

  .reviewSlideContainer{{ section.id }}.highlighted .slide_review_body {
    color: {{ section.settings.highlight_review_body_color }} !important;
    --color-highlighted-color: {{ section.settings.highlight_review_bolded_body_color }};
  }

  .reviewSlideContainer{{ section.id }}.highlighted .reviewNameText{{ section.id }} {
    color: {{ section.settings.highlight_review_name_color }} !important;
  }





  .authorImageContainer{{ section.id }} img {
    width: 100%;
    height: 350px;
    object-fit: cover;
    border-radius: 15px 15px 0 0;
  }

  @media(max-width: 767px) {

    .prevButton{{ section.id }} {
      left: -15px;
    }

    .nextButton{{ section.id }} {
      right: -15px;
    }
  }
  .swiper-pagination-progressbar{{ section.id }} {
    display: none;
  }
  @media(min-width: 767px) {
    .sectionPadding{{ section.id }} {
      padding: {{ section.settings.section_padding_top }}px 5rem {{ section.settings.section_padding_bottom }}px;
      margin: 0 auto;
    }

    .swiperSliderOuterContainer{{ section.id }} {
      width: 100%;
      max-width: 95%;
      margin: 35px auto 0;
    }

    .reviewNameText{{ section.id }} {
      font-size: 16px;
      line-height: 26px;
    }

    #slideHeading{{ section.id }} {
      font-size: 23px;
    }

    .prevButton{{ section.id }},
    .nextButton{{ section.id }} {
      width: 48px;
      height: 48px;
    }

    .prevButton{{ section.id }} {
      left: -17px;
    }

    .nextButton{{ section.id }} {
      right: -17px;
    }

  .reviewSlideContainer{{ section.id }}.swiper-slide-visible.swiper-slide-prev,
  .reviewSlideContainer{{ section.id }}.swiper-slide-visible.swiper-slide-next {
    opacity: 1;
  }

  .swiper-pagination-progressbar{{ section.id }} {
    position: relative !important;
    margin-top: 18px;
    height: 4px !important;
    background: rgba(0, 0, 0, 0.1) !important;
    border-radius: 2px;
    display: flex;
  }

  .swiper-pagination-progressbar{{ section.id }} .swiper-pagination-progressbar-fill {
    background: {{ section.settings.progress_bar_color | default: '#000000' }} !important;
    border-radius: 2px;
  }
}
