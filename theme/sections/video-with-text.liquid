{%- liquid
  assign global_heading_size = settings.enable_global_heading_font_size
  assign global_body_size = settings.enable_global_body_font_size
  assign global_color = settings.enable_global_color
-%}
{% render 'preview-necessary-assets' %}
{% if request.visual_preview_mode %}
  {% assign section_id = '' %}
{% else %}
  {% assign section_id = '#shopify-section-' | append: section.id %}
{% endif %}
<style> 
  {{ section_id }} .video-with-text {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    width: 100%;
    display: flex;
    {% if section.settings.video_first %}
      flex-direction: row;
    {% else %}
      flex-direction: row-reverse;
    {% endif %}
  }
  {{ section_id }} .video-with-text__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: auto;
    {% if section.settings.enable_gradient_background %}
        background: {{ section.settings.gradient_background }};
    {% else %}
        background: {{ section.settings.background_color }};
    {% endif %}
    {% if section.settings.desktop_content_alignment == 'left' %}
      align-items: flex-start;
    {% elsif section.settings.desktop_content_alignment == 'right' %}
      align-items: flex-end;
    {% else %}
      align-items: center;
    {% endif %}
  }
  {{ section_id }} .video-with-text__video {
    position: relative;
    aspect-ratio: 16/9;
    flex:1;
    display: flex;
  }
  {{ section_id }} .video-with-text__video iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  {{ section_id }} video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  {{ section_id }} .video-with-text__video-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  {{ section_id }} .play-icon-container {
    position: relative;
    border: 0px solid transparent !important;
    height: {{ section.settings.video_button_size }}px;
    width: {{ section.settings.video_button_size }}px;
    border-radius: 50%;
    z-index: 0;
    background: transparent;
    cursor: pointer;
  }
  {{ section_id }} .play-icon-container svg {
    width: 100%;
    height: 100%;
  }
  {{ section_id }} .play-button-element {
    position: absolute;
    display:flex;
    justify-content: center;
    align-items: center;
    z-index: 1;
    cursor: pointer;
    background-color: transparent !important;
    border: 0px solid transparent !important;
    padding: 0;
    width: 100%;
    height: 100%;
  }

  @media (max-width: 1024px) {
    {{ section_id }} .video-with-text {
      flex-direction: column;
    }
    {{ section_id }} .video-with-text__content {
        padding-inline: 2rem;
    }
  }
</style>
<div class="video-with-text">
  {%- liquid
    assign video_type = 'local'
    assign video_src = ''
    
    # Determine video type and source
    if section.settings.video != blank
      # Shopify-hosted video (direct upload)
      assign video_type = 'local'
      assign video_src = section.settings.video
    elsif section.settings.video_url != blank
      # Check if it's YouTube or Vimeo
      if section.settings.video_url.type == 'youtube'
        assign video_type = 'youtube'
        assign video_id = section.settings.video_url.id
      elsif section.settings.video_url.type == 'vimeo'
        assign video_type = 'vimeo'
        assign video_id = section.settings.video_url.id
      else
        # Direct video URL entered in video_url field
        assign video_type = 'url'
        assign video_src = section.settings.video_url
      endif
    elsif section.settings.direct_video_url != blank
      # Direct video URL (e.g., https://example.com/video.mp4)
      assign video_type = 'url'
      assign video_src = section.settings.direct_video_url
    endif
  -%}
  
  <div class="video-with-text__video">
    {%- case video_type -%}
      {%- when 'youtube' -%}
        <iframe 
          src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1" 
          class="js-youtube" 
          allow="autoplay; fullscreen; picture-in-picture; clipboard-write; encrypted-media; web-share" referrerpolicy="strict-origin-when-cross-origin" 
          allowfullscreen 
          title="{{ section.settings.description | escape }}"
          style="width: 100%; height: 100%; border: none;position: absolute;top: 0;left: 0;"
        ></iframe>
        
      {%- when 'vimeo' -%}
        <iframe 
          src="https://player.vimeo.com/video/{{ video_id }}" 
          class="js-vimeo" 
          allow="autoplay; fullscreen; picture-in-picture; clipboard-write; encrypted-media; web-share" referrerpolicy="strict-origin-when-cross-origin" 
          allowfullscreen 
          title="{{ section.settings.description | escape }}"
          style="width: 100%; height: 100%; border: none;position: absolute;top: 0;left: 0;"
        ></iframe>
        
      {%- when 'url' -%}
        <video 
          class="video-with-text__video-image" 
          src="{{ video_src }}"
          loop="true"
          {% if section.settings.video_thumb %}
            poster="{{ section.settings.video_thumb | image_url }}"
          {% endif %}
        ></video>
        <button class="play-button-element" aria-label="Play video" onclick="toggleVideoPlayback{{ section.id | replace: '-', '' }}(event)">
          <div aria-hidden="true" class="play-icon-container color-{{ section.settings.color_scheme }}">
            {% render 'icon-play-video', background_color: section.settings.video_button_background_color, border_color: section.settings.video_button_border_color, icon_color: section.settings.video_button_icon_color, size: section.settings.video_button_size %}
          </div>
        </button>
        
      {%- else -%}
        {%- if section.settings.video_thumb -%}
            {%- assign poster = section.settings.video_thumb | image_url -%}
            {% capture video_html %}{{ section.settings.video | video_tag: 
              image_size: '1100x',
              poster: poster,
              loop: true,
              class: 'video-with-text__video-image',
              controls: false
            }}{% endcapture %}
            {% capture img_with_alt %}<img alt="{{ product.title }} video" loading="lazy" decoding="async" width="1100" height="1100">{% endcapture %}
            {{ video_html | replace: "<img ", img_with_alt }}
          {%- else -%}
            
            {% capture video_html %}{{ section.settings.video | video_tag: 
              image_size: '1100x',
              loop: true,
              class: 'video-with-text__video-image',
              controls: false
            }}{% endcapture %}
            {% capture img_with_alt %}<img alt="{{ product.title }} video" loading="lazy" decoding="async" width="1100" height="1100">{% endcapture %}
            {{ video_html | replace: "<img ", img_with_alt }}
          {%- endif -%}
          <button class="play-button-element" aria-label="Play video" onclick="toggleVideoPlayback{{ section.id | replace: '-', '' }}(event)">
            <div aria-hidden="true" class="play-icon-container color-{{ section.settings.color_scheme }}">
              {% render 'icon-play-video', background_color: section.settings.video_button_background_color, border_color: section.settings.video_button_border_color, icon_color: section.settings.video_button_icon_color, size: section.settings.video_button_size %}
            </div>
          </button>
    {%- endcase -%}
  </div>
  {% if section.blocks.size > 0 %}
    <div class="video-with-text__content">
        {%- for block in section.blocks -%}
        {%- case block.type -%}
            {%- when 'heading' -%}
            <style>
                #heading-section-{{ block.id }} {
                color: {% if global_color %}rgb(var(--color-base-heading)){% else %}{{ block.settings.color }}{% endif %};
                font-size: {% if global_heading_size %}var(--font-heading-size) !important{% else %}{{ block.settings.size }}px !important{% endif %};
                line-height: {% if global_heading_size %}calc(var(--font-heading-size) + 8px) !important{% else %}{{ block.settings.size | plus: 8 }}px{% endif %};
                margin: 0;
                padding-top: {{ block.settings.padding_top_desktop }}px;
                padding-bottom: {{ block.settings.padding_bottom_desktop }}px;
                text-align: {{ section.settings.desktop_content_alignment }};
                min-width: 348px;
                max-width: 348px;
                }
                @media (max-width: 768px) {
                #heading-section-{{ block.id }} {
                    padding-top: {{ block.settings.padding_top_mobile }}px;
                    padding-bottom: {{ block.settings.padding_bottom_mobile }}px;
                    font-size: {% if global_heading_size %}var(--font-heading-mob-size) !important{% else %}{{ block.settings.mobile_font_size }}px !important{% endif %};
                    line-height: {% if global_heading_size %}calc(var(--font-heading-mob-size) + 6px) !important{% else %}{{ block.settings.mobile_font_size | plus: 6 }}px{% endif %};
                    text-align: {{ section.settings.mobile_content_alignment }};
                    min-width: 100%;
                    max-width: 100%;
                }
                }

                #heading-section-{{ block.id }} strong {
                {%- if block.settings.heading_use_gradient -%}
                    background: {% if block.settings.heading_gradient_color != blank %}{{ block.settings.heading_gradient_color }}{% else %}var(--gradient-base-background-1){% endif %};
                    -webkit-background-clip: text;
                    background-clip: text;
                    color: transparent;
                {%- endif -%}
                }
            </style>

            <h2 id="heading-section-{{ block.id }}" class="title banner__heading" {{ block.shopify_attributes }}>
                <span style="--color-highlighted-color: {{ block.settings.highlighted_color }};">
                {{- block.settings.heading -}}
                </span>
            </h2>

            {%- when 'text' -%}
            <style>
                #text-section-{{ block.id }} {
                margin: 0;
                padding-top: {{ block.settings.padding_top_desktop }}px;
                padding-bottom: {{ block.settings.padding_bottom_desktop }}px;
                text-align: {{ section.settings.desktop_content_alignment }};
                font-size: {{ block.settings.size }}px;
                line-height: {{ block.settings.size | plus: 8 }}px;
                color: {% if global_color %}rgb(var(--color-base-text)){% else %}{{ block.settings.color }}{% endif %};
                min-width: 348px;
                max-width: 348px;
                }
                #text-section-{{ block.id }} strong {
                {% if block.settings.text_use_gradient %}
                    background: {% if block.settings.text_gradient_color != blank %}{{ block.settings.text_gradient_color }}{% else %}var(--color-highlighted-color){% endif %};
                    -webkit-background-clip: text;
                    background-clip: text;
                    color: transparent;
                {% else %}
                    color: {{ block.settings.highlighted_color }};
                {% endif %}
                }
                @media (max-width: 750px) {
                #text-section-{{ block.id }} {
                    padding-top: {{ block.settings.padding_top_mobile }}px;
                    padding-bottom: {{ block.settings.padding_bottom_mobile }}px;
                    text-align: {{ section.settings.mobile_content_alignment }};
                    font-size: {{ block.settings.size_mobile }}px;
                    line-height: {{ block.settings.size_mobile | plus: 6 }}px;
                    min-width: 100%;
                    max-width: 100%;
                }
                }
            </style>
            <div
                id="text-section-{{ block.id }}"
                class="body image-with-text__text rte sw-base-text-color body"
                {{ block.shopify_attributes }}
            >
                <div>{{ block.settings.text }}</div>
            </div>

            {%- when 'buttons' -%}
            <style>
                #buttons-section-{{ block.id }} {
                padding-top: {{ block.settings.padding_top_desktop }}px;
                padding-bottom: {{ block.settings.padding_bottom_desktop }}px;
                margin: 0;
                display: flex;
                text-align: {{ section.settings.desktop_content_alignment }};
                {% if section.settings.desktop_content_alignment == 'left' %}
                justify-content: flex-start;
                {% elsif section.settings.desktop_content_alignment == 'right' %}
                justify-content: flex-end;
                {% else %}
                justify-content: center;
                {% endif %}
                width: 100%;
                max-width: 100%;
                }
                #buttons-section-{{ block.id }} #button-1-{{ block.id }} {
                font-size: {{ block.settings.button_label_1_size }}px;
                line-height: {{ block.settings.button_label_1_size | plus: 8 }}px;
                color: {{ block.settings.button_1_text_color }};
                background-color: {{ block.settings.button_1_background_color }};
                border-radius: {{ block.settings.button_1_border_radius }}px !important;
                padding: {{ block.settings.button_padding_vertical }}px 12px; 
                max-width: {{ block.settings.button_width_increase_desktop }}%;
                min-width: fit-content;
                width: 100%;
                flex-shrink: 0;
                }
                #buttons-section-{{ block.id }} #button-1-{{ block.id }} .button-text {
                font-size: {{ block.settings.button_label_1_size }}px;
                line-height: {{ block.settings.button_label_1_size | plus: 8 }}px;
                color: {{ block.settings.button_1_text_color }};
                }
                @media (max-width: 750px) {
                #buttons-section-{{ block.id }} {
                    padding-top: {{ block.settings.padding_top_mobile }}px;
                    padding-bottom: {{ block.settings.padding_bottom_mobile }}px;
                    text-align: {{ section.settings.mobile_content_alignment }};
                    {% if section.settings.mobile_content_alignment == 'left' %}
                    justify-content: flex-start;
                    {% elsif section.settings.mobile_content_alignment == 'right' %}
                    justify-content: flex-end;
                    {% else %}
                    justify-content: center;
                    {% endif %}
                }
                #buttons-section-{{ block.id }} #button-1-{{ block.id }} {
                    font-size: {{ block.settings.button_label_1_size_mobile }}px;
                    line-height: {{ block.settings.button_label_1_size_mobile | plus: 6 }}px;
                    padding: {{ block.settings.button_padding_vertical }}px 12px;
                    max-width: {{ block.settings.button_width_increase_mobile }}%;
                }
                #buttons-section-{{ block.id }} #button-1-{{ block.id }} .button-text {
                    font-size: {{ block.settings.button_label_1_size_mobile }}px;
                    line-height: {{ block.settings.button_label_1_size_mobile | plus: 6 }}px;
                }
                }
            </style>
            <div
                id="buttons-section-{{ block.id }}"
                class="banner__buttons banner__buttons-{{ block.id }}"
                {{ block.shopify_attributes }}
            >
                {%- if block.settings.button_label_1 != blank -%}
                <a
                    id="button-1-{{ block.id }}"
                    {% if block.settings.button_link_1 == blank %}
                    role="link" aria-disabled="true"
                    {% else %}
                    href="{{ block.settings.button_link_1 }}"
                    {% endif %}
                    class="button"
                >
                    <span class="button-text">{{- block.settings.button_label_1 | escape -}}</span>
                </a>
                {%- endif -%}
            </div>
        {%- endcase -%}
        {%- endfor -%}
    </div>
  {% endif %}
</div>
<script async>
  function toggleVideoPlayback{{ section.id | replace: '-', '' }}(event) {
    const video = event.target.closest('.video-with-text__video').querySelector('video');
    const buttonWrapper = event.target.closest('.video-with-text__video').querySelector('.play-icon-container');
    if (!buttonWrapper || !video) return;
    if (video.paused) {
      video.play();
      buttonWrapper.querySelector('.play-icon').style.display = 'none';
    } else {
      video.pause();
      buttonWrapper.querySelector('.play-icon').style.display = 'block';
    }
  }
</script>
