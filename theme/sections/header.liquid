{% comment %} Header styles {% endcomment %}
<style>
  header-drawer {
    justify-self: start;
    margin-left: -1.2rem;
  }

  .header__heading {
    margin: 0;
  }
  
  .header__heading-logo {
    max-width: {{ settings.logo_width }}px;
  }

  @media screen and (max-width: 768px) {
    .header__heading-logo {
      max-width: {{ settings.mobile_logo_width }}px;
    }
  }

  {%- if section.settings.sticky_header_type == 'reduce-logo-size' -%}
    .scrolled-past-header .header__heading-logo {
      width: 75%;
    }
  {%- endif -%}

  @media screen and (min-width: 990px) {
    header-drawer {
      display: none;
    }
  }

  .menu-drawer-container {
    display: flex;
  }

  .list-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .list-menu--inline {
    display: inline-flex;
    flex-wrap: wrap;
  }

  .list-menu__item {
    display: flex;
    align-items: center;
    line-height: calc(1 + 0.3 / var(--font-body-scale));
  }

  .list-menu__item--link {
    text-decoration: none;
    padding: 1rem 0;
    line-height: calc(1 + 0.8 / var(--font-body-scale));
  }

  @media screen and (min-width: 750px) {
    .list-menu__item--link {
      padding: 0.5rem 0;
    }
  }
  #shopify-section-{{ section.id }} .header__menu-item {
    font-size: {{ section.settings.menu_item_font_size_desktop }}px;
    line-height: 100%;
    margin: 0;
    color: {{ section.settings.menu_item_color }};
  }
</style>

{% comment %} Section specific styles {% endcomment %}
{%- style -%}
  #shopify-section-{{ section.id }} .header-wrapper {
    padding: 5px 0;
  } 
  
  .header {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }

  .section-header {
    position: sticky;
    margin-bottom: 0;
  }

  @media screen and (min-width: 990px) {
    .header {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* CLS Optimization: More accurate header height estimation to prevent layout shift */
  {% comment %} Account for logo height, navigation, padding, and borders more accurately {% endcomment %}
  {% assign base_mobile_height = 50 %}
  {% assign base_desktop_height = 55 %}
  
  {% comment %} Add padding with full values (not half) {% endcomment %}
  {% assign estimated_mobile_height = section.settings.padding_top | plus: section.settings.padding_bottom | plus: base_mobile_height %}
  {% assign estimated_desktop_height = section.settings.padding_top | plus: section.settings.padding_bottom | plus: base_desktop_height %}
  
  {% comment %} Account for announcement bar if present {% endcomment %}
  {% if section.settings.enable_sticky_header and sections.announcement-bar %}
    {% assign estimated_mobile_height = estimated_mobile_height | plus: 40 %}
    {% assign estimated_desktop_height = estimated_desktop_height | plus: 45 %}
  {% endif %}
  
  :root {
    --header-height: {{ estimated_mobile_height }}px;
    --header-height-initial: {{ estimated_mobile_height }}px;
  }

  @media screen and (min-width: 990px) {
    :root {
      --header-height: {{ estimated_desktop_height }}px;
      --header-height-initial: {{ estimated_desktop_height }}px;
    }
  }

  /* CLS Optimization: Ensure header takes up space immediately */
  .section-header {
    min-height: var(--header-height-initial);
  }
{%- endstyle -%}

