{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-values">
  <div class="lom-container">
    <h2 class="lom-heading lom-reveal">{{ section.settings.heading }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="lom-heading-subtitle lom-reveal">{{ section.settings.subtitle }}</p>
    {% endif %}
    <div class="lom-values__grid">
      {% for block in section.blocks %}
        <div class="lom-values__item lom-reveal" {{ block.shopify_attributes }}>
          <span class="lom-values__icon">{{ block.settings.icon }}</span>
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

