{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-hero">
  <div class="lom-container">
    <div class="lom-hero-content">
      <div class="lom-hero-text lom-fade-in">
        {% if section.settings.label != blank %}
          <span class="lom-hero-label">{{ section.settings.label }}</span>
        {% endif %}
        <h1>{{ section.settings.heading }}</h1>
        <p class="lom-hero-subtitle">{{ section.settings.subtitle }}</p>
        <div class="lom-hero-cta">
          {% if section.settings.button_text != blank %}
            <a href="{{ section.settings.button_url }}" class="lom-cta-btn lom-cta-btn-large">{{ section.settings.button_text }}</a>
          {% endif %}
          {% if section.settings.button_secondary_text != blank %}
            <a href="{{ section.settings.button_secondary_url }}" class="lom-cta-btn lom-cta-btn-secondary">{{ section.settings.button_secondary_text }}</a>
          {% endif %}
        </div>
      </div>
      <div class="lom-hero-image lom-fade-in">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | image_url: width: 800 }}" alt="{{ section.settings.image.alt | default: section.settings.heading }}" loading="eager" width="800" height="{{ 800 | divided_by: section.settings.image.aspect_ratio | round }}">
        {% elsif collections.all.products.first.featured_image %}
          {% assign hero_product = collections.all.products.first %}
          <img src="{{ hero_product.featured_image | image_url: width: 800 }}" alt="{{ hero_product.title }}" loading="eager">
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Lom Hero",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label text",
      "default": "100% Natural Thai Herbs"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Nature's Answer to Headaches, Fatigue & Congestion"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "One inhale clears your head. One roll soothes the pain. Plant-based ingredients, perfected over a century. Works in seconds â€” no pills, no chemicals, no crash."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Primary button text",
      "default": "Shop Siam Lom"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Primary button link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "button_secondary_text",
      "label": "Secondary button text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_secondary_url",
      "label": "Secondary button link"
    }
  ],
  "presets": [
    {
      "name": "Lom Hero"
    }
  ]
}
{% endschema %}
