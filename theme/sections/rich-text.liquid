{%- comment -%} CSS Imports {%- endcomment -%}
<style>
  .rich-text {
    z-index: 1;
  }

  .rich-text__wrapper {
    display: flex;
    justify-content: center;
    /* width: calc(100% - 4rem / var(--font-body-scale)); */
  }

  .rich-text:not(.rich-text--full-width) .rich-text__wrapper {
    margin: auto;
    /* width: calc(100% - 8rem / var(--font-body-scale)); */
  }

  .rich-text__blocks {
    width: 100%;
  }

  @media screen and (min-width: 750px) {
    .rich-text__wrapper {
      width: 100%;
    }

    .rich-text__wrapper--left {
      justify-content: flex-start;
    }

    .rich-text__wrapper--right {
      justify-content: flex-end;
    }
  }

  .rich-text__blocks * {
    overflow-wrap: break-word;
  }

  .rich-text__blocks > * {
    margin-top: 0;
    margin-bottom: 0;
  }


  .rich-text__blocks > * + a {
    margin-top: 3rem;
  }

  .rich-text__buttons {
    display: inline-flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
    width: 100%;
    max-width: 45rem;
    margin-bottom: 10px;
    word-break: break-word;
  }

  {% comment %} .rich-text__buttons--multiple > * {
    flex-grow: 1;
    min-width: 22rem;
  } {% endcomment %}

  .rich-text__buttons + .rich-text__buttons {
    margin-top: 1rem;
  }

  .rich-text__blocks.left .rich-text__buttons {
    justify-content: flex-start;
  }

  .rich-text__blocks.right .rich-text__buttons {
    justify-content: flex-end;
  }
</style>

{%- comment -%} Global Settings {%- endcomment -%}
{%- liquid
  assign global_heading_size = settings.enable_global_heading_font_size
  assign global_body_size = settings.enable_global_body_font_size
  assign global_color = settings.enable_global_color
-%}

{%- comment -%} Section Styles {%- endcomment -%}
{%- style -%}
  {%- if request.visual_preview_mode -%}
    {% comment %} don't want fade-in animation in preview mode because it messes up preview {% endcomment %}
    .animation_section,
    .animation_section * {
      opacity: 1 !important;
      transform: none !important;
      transition: none !important;
      will-change: auto !important;
    }
  {%- endif -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}

{%- comment -%} Main Section {%- endcomment -%}
<div class="rich-main color-{{ section.settings.color_scheme }} ">
  <div class="rich-text page-width content-container color-{{ section.settings.color_scheme }} gradient rich-text--full-width content-container--full-width section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--center">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        {%- comment -%} Heading Block {%- endcomment -%}
        {%- if section.settings.heading != blank -%}
          {%- style -%}
            #section-heading-{{ section.id }} {
              font-size: {% if global_heading_size %}var(--font-heading-size)!important{% else %}{{ section.settings.heading_font_size }}px!important{% endif %};
              color: {% if global_color %}rgb(var(--color-base-heading)){% else %}{{ section.settings.heading_color }}{% endif %} !important;
              --color-highlighted-color: {{ section.settings.heading_highlighted_color }};
              display: flex;
              width: 100%;
              {% if section.settings.content_alignment == 'center' %}
                justify-content: center;
              {% elsif section.settings.content_alignment == 'right' %}
                justify-content: flex-end;
              {% else %}
                justify-content: flex-start;
              {% endif %}
            }
            #section-heading-{{ section.id }} p {
              max-width: 610px;
            }
            @media (max-width: 768px) {
              #section-heading-{{ section.id }} {
                font-size: {% if global_heading_size %}var(--font-heading-mob-size) !important{% else %}{{ section.settings.mobile_heading_font_size }}px!important{% endif %};
              }
            }

            #section-heading-{{ section.id }} strong {
              {%- if section.settings.heading_use_gradient -%}
                background: {% if section.settings.heading_gradient_color != blank %}{{ section.settings.heading_gradient_color }}{% else %}var(--gradient-base-background-1){% endif %};
                -webkit-background-clip: text;
                background-clip: text;
                color: transparent;
              {%- endif -%}
            }
          {%- endstyle -%}

          <h2
            id="section-heading-{{ section.id }}"
            class="rich-text__heading title"
            style="margin-top: 0;"
            {{ section.shopify_attributes }}
          >
            <p style="margin:0;">
              {{ section.settings.heading | replace: 'p>', 'span>' }}
            </p>
          </h2>
        {%- endif -%}

        {%- comment -%} Text Block {%- endcomment -%}
        {%- if section.settings.text != blank -%}
          {%- style -%}
            #rich-text__text-{{ section.id }} p,
            #rich-text__text-{{ section.id }} {
              font-size: {% if global_body_size %}var(--global-body-text-font-size)!important{% else %}{{ section.settings.body_font_size }}px!important{% endif %};
              line-height: 1.4em;
              color: {% if global_color %}rgb(var(--color-base-text)){% else %}{{ section.settings.body_color }}{% endif %};
              --color-highlighted-color: {{ section.settings.body_highlighted_color }};
            }
            #rich-text__text-{{ section.id }} {
              max-width: {{ section.settings.text_max_width_percentage }}%;
              width: 100%;
            }
            @media (max-width: 768px) {
              #rich-text__text-{{ section.id }} {
                max-width: {{ section.settings.text_max_width_percentage_mobile }}%;
              }
            }
          {%- endstyle -%}

          <div
            id="rich-text__text-{{ section.id }}"
            class="rich-text__text sw-base-text-color image-with-text__text rte body"
            {% if section.settings.content_alignment == 'center' %}
              style="margin: 0 auto; margin-top: 10px;"
            {% elsif section.settings.content_alignment == 'right' %}
              style="margin-left: auto; margin-top: 10px;"
            {% else %}
              style="margin-right: auto; margin-top: 10px;"
            {% endif %}
            {{ section.shopify_attributes }}
          >
            {{ section.settings.text }}
          </div>
        {%- endif -%}

        {%- comment -%} Buttons Block {%- endcomment -%}
        {%- if section.settings.button_label != blank or section.settings.button_label_2 != blank -%}
          <div
            class="rich-text__buttons rich-text__buttons-{{ section.id }} {% if section.settings.button_label != blank and section.settings.button_label_2 != blank %}rich-text__buttons--multiple{% endif %}"
            {{ section.shopify_attributes }}
          >
            {%- style -%}
              .rich-text__buttons-{{ section.id }} .button:after {
                box-shadow: 0 0 0 calc(var(--buttons-border-width) + var(--border-offset)) rgba(255, 255, 255, calc(1 - 1.0)), 0 0 0 var(--buttons-border-width) var(--color-base-accent-1);
              }
            {%- endstyle -%}

            {%- if section.settings.button_label != blank -%}
              {% style %}
                .rich-text__buttons-{{ section.id }} .button {
                  padding: {{ section.settings.button_padding_vertical }}px 12px;
                  font-size: {{ section.settings.button_font_size }}px !important;
                  line-height: {{ section.settings.button_font_size | plus: 8 }}px !important;
                  color: {{ section.settings.button_color }};
                  background-color: {{ section.settings.button_bg_color }};
                  border-radius: {{ section.settings.button_border_radius }}px !important;
                  max-width: {{ section.settings.button_width_increase_desktop }}%;
                  min-width: fit-content;
                  width: 100%;
                  flex-shrink: 0;
                  margin-top: 25px;
                }
                .rich-text__buttons-{{ section.id }} .button:not([aria-disabled="true"]):hover {
                  padding-right: 12px;
                }
                @media (max-width: 768px) {
                  .rich-text__buttons-{{ section.id }} .button {
                    padding: {{ section.settings.button_padding_vertical_mobile }}px 12px;
                    font-size: {{ section.settings.button_font_size_mobile }}px !important;
                    line-height: {{ section.settings.button_font_size_mobile | plus: 8 }}px !important;
                    max-width: {{ section.settings.button_width_increase_mobile }}%;
                  }
                  .rich-text__buttons-{{ section.id }} .button:not([aria-disabled="true"]):hover {
                    padding-right: 12px;
                  }
                }
              
              {% endstyle %}
              <a
                {% if section.settings.button_link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ section.settings.button_link }}"
                {% endif %}
                class="button button--primary"
              >
                <span class="button-text">{{ section.settings.button_label | escape }}</span>
              </a>
            {%- endif -%}
 
          </div>
        {%- endif -%}

        {% comment %} List cards blocks{% endcomment %}
          {% content_for 'block', type: '_rich-text-list-cards', id: 'list-cards' %}
      </div>
    </div>
  </div>
</div>

