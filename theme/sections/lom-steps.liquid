{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-steps">
  <div class="lom-container">
    <h2 class="lom-heading lom-fade-in">{{ section.settings.heading }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="lom-heading-subtitle lom-fade-in">{{ section.settings.subtitle }}</p>
    {% endif %}
    <div class="lom-steps-container">
      {% for block in section.blocks %}
        <div class="lom-step lom-fade-in" {{ block.shopify_attributes }}>
          <div class="lom-step-number">{{ forloop.index }}</div>
          <h3>{{ block.settings.heading }}</h3>
          <p>{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Lom How It Works",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How It Works"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Step title",
          "default": "Choose Your Relief"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Step description",
          "default": "Inhaler for alertness & congestion. Roller for headaches & tension."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lom How It Works",
      "blocks": [
        { "type": "step", "settings": { "heading": "Choose Your Relief", "text": "Inhaler for alertness & congestion. Roller for headaches & tension." } },
        { "type": "step", "settings": { "heading": "Inhale or Apply", "text": "Breathe deeply through the inhaler, or roll onto temples and neck." } },
        { "type": "step", "settings": { "heading": "Feel It in Seconds", "text": "Instant natural relief. No waiting. No crash. No side effects." } }
      ]
    }
  ]
}
{% endschema %}
