{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-benefits-strip">
  <div class="lom-container">
    <div class="lom-benefits-strip__items">
      {% for block in section.blocks %}
        <div class="lom-benefits-strip__item lom-reveal" {{ block.shopify_attributes }}>
          <span class="lom-benefits-strip__icon">{{ block.settings.icon }}</span>
          <div>
            <strong>{{ block.settings.title }}</strong>
            {% if block.settings.text != blank %}
              <span>{{ block.settings.text }}</span>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

