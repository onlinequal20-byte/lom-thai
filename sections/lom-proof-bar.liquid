{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-proof-bar">
  <div class="lom-container">
    <div class="lom-proof-items">
      {% for block in section.blocks %}
        {% unless forloop.first %}
          <span class="lom-proof-separator"></span>
        {% endunless %}
        <span class="lom-proof-item">{{ block.settings.text }}</span>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Lom Proof Bar",
  "settings": [],
  "blocks": [
    {
      "type": "proof_item",
      "name": "Proof item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "50,000+ Sold"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lom Proof Bar",
      "blocks": [
        { "type": "proof_item", "settings": { "text": "50,000+ Sold" } },
        { "type": "proof_item", "settings": { "text": "4.9 â˜… Rating" } },
        { "type": "proof_item", "settings": { "text": "Free US & EU Shipping" } },
        { "type": "proof_item", "settings": { "text": "30-Day Guarantee" } }
      ]
    }
  ]
}
{% endschema %}
