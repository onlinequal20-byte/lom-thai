{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-compare">
  <div class="lom-container">
    <h2 class="lom-heading lom-fade-in">{{ section.settings.heading }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="lom-heading-subtitle lom-fade-in">{{ section.settings.subtitle }}</p>
    {% endif %}
    <div class="lom-compare-table lom-fade-in">
      <div style="overflow-x:auto">
        <table>
          <thead>
            <tr>
              <th></th>
              <th>{{ section.settings.brand_name }}</th>
              {% for block in section.blocks %}
                {% if block.type == 'competitor' %}
                  <th>{{ block.settings.name }}</th>
                {% endif %}
              {% endfor %}
            </tr>
          </thead>
          <tbody>
            {% for block in section.blocks %}
              {% if block.type == 'row' %}
                <tr {{ block.shopify_attributes }}>
                  <td>{{ block.settings.feature }}</td>
                  <td><span class="lom-compare-checkmark">{{ block.settings.brand_value }}</span></td>
                  <td>{{ block.settings.competitor_1 }}</td>
                  <td>{{ block.settings.competitor_2 }}</td>
                  <td>{{ block.settings.competitor_3 }}</td>
                </tr>
              {% endif %}
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Lom Comparison",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Lom Thai?"
