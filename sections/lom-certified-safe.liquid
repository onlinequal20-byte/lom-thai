<style>
  .lom-certified {
    padding: var(--lt-section-pad, 100px) 0;
    background: #fff;
    position: relative;
    overflow: hidden;
  }
  .lom-certified::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(196,122,90,0.05) 0%, transparent 60%);
    pointer-events: none;
  }

  /* Header */
  .lom-certified__header {
    text-align: center;
    margin-bottom: 56px;
  }
  .lom-certified__eyebrow {
    font-family: var(--lt-sans);
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 4px;
    color: var(--lt-terracotta);
    font-weight: 600;
    margin-bottom: 16px;
  }
  .lom-certified__title {
    font-family: var(--lt-serif);
    font-size: clamp(28px, 4vw, 44px);
    font-weight: 400;
    color: var(--lt-charcoal);
    line-height: 1.1;
    margin: 0 0 16px;
  }
  .lom-certified__subtitle {
    font-family: var(--lt-sans);
    font-size: 15px;
    color: var(--lt-warm-gray);
    line-height: 1.6;
    max-width: 560px;
    margin: 0 auto;
  }

  /* Badge Grid */
  .lom-certified__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-bottom: 48px;
  }
  .lom-certified__card {
    background: #fff;
    border: 1px solid rgba(196,122,90,0.12);
    border-radius: 6px;
    padding: 32px 24px;
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }
  .lom-certified__card::before {
    content: '';
    position: absolute;
    top: -1px;
    left: 15%;
    right: 15%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(196,122,90,0.25), transparent);
    pointer-events: none;
  }
  .lom-certified__card:hover {
    border-color: rgba(196,122,90,0.2);
    box-shadow: 0 4px 24px rgba(42,37,32,0.06);
  }
  .lom-certified__badge {
    width: 56px;
    height: 56px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: rgba(196,122,90,0.06);
    border: 1px solid rgba(196,122,90,0.15);
  }
  .lom-certified__badge svg {
    width: 24px;
    height: 24px;
  }
  .lom-certified__card-label {
    font-family: var(--lt-sans);
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 2.5px;
    color: var(--lt-warm-gray);
    font-weight: 600;
    margin-bottom: 8px;
  }
  .lom-certified__card-title {
    font-family: var(--lt-serif);
    font-size: 20px;
    font-weight: 500;
    color: var(--lt-charcoal);
    line-height: 1.2;
    margin-bottom: 8px;
  }
  .lom-certified__card-ref {
    font-family: var(--lt-sans);
    font-size: 11px;
    color: var(--lt-warm-gray);
    letter-spacing: 0.5px;
    font-variant-numeric: tabular-nums;
  }

  /* Bottom row: secondary badges */
  .lom-certified__secondary {
    display: flex;
    justify-content: center;
    gap: 32px;
    flex-wrap: wrap;
    padding-top: 32px;
    border-top: 1px solid var(--lt-border);
    margin-bottom: 40px;
  }
  .lom-certified__secondary-item {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .lom-certified__secondary-icon {
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  .lom-certified__secondary-icon svg {
    width: 18px;
    height: 18px;
  }
  .lom-certified__secondary-text {
    font-family: var(--lt-sans);
    font-size: 13px;
    color: var(--lt-charcoal);
    font-weight: 500;
  }

  /* Expandable detail */
  .lom-certified__expand {
    text-align: center;
  }
  .lom-certified__expand-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: none;
    border: 1.5px solid var(--lt-border-light);
    border-radius: 10px;
    padding: 12px 28px;
    font-family: var(--lt-sans);
    font-size: 13px;
    font-weight: 600;
    color: var(--lt-charcoal);
    cursor: pointer;
    transition: all 0.2s ease;
  }
  .lom-certified__expand-btn:hover {
    border-color: var(--lt-terracotta);
    color: var(--lt-terracotta);
    background: rgba(196,122,90,0.04);
  }
  .lom-certified__expand-arrow {
    transition: transform 0.3s ease;
    display: flex;
  }
  .lom-certified__detail {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.3s ease;
    opacity: 0;
  }
  .lom-certified__detail.is-open {
    max-height: 600px;
    opacity: 1;
    margin-top: 32px;
  }
  .lom-certified__detail-inner {
    background: var(--lt-ivory);
    border: 1px solid var(--lt-border);
    border-radius: 6px;
    padding: 32px;
  }
  .lom-certified__detail-title {
    font-family: var(--lt-serif);
    font-size: 22px;
    font-weight: 500;
    color: var(--lt-charcoal);
    margin-bottom: 20px;
  }
  .lom-certified__detail-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }
  .lom-certified__detail-row {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    padding: 12px 0;
  }
  .lom-certified__detail-check {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: rgba(122,138,90,0.12);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 1px;
  }
  .lom-certified__detail-check svg {
    width: 12px;
    height: 12px;
  }
  .lom-certified__detail-label {
    font-family: var(--lt-sans);
    font-size: 14px;
    color: var(--lt-charcoal);
    line-height: 1.5;
  }
  .lom-certified__detail-label strong {
    color: var(--lt-brown-black);
    font-weight: 600;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .lom-certified {
      padding: var(--lt-section-pad-mobile, 56px) 0;
    }
    .lom-certified .lom-container {
      padding: 0 16px;
    }
    .lom-certified__header {
      margin-bottom: 36px;
    }
    .lom-certified__grid {
      grid-template-columns: 1fr;
      gap: 12px;
      margin-bottom: 32px;
    }
    .lom-certified__card {
      display: grid;
      grid-template-columns: 48px 1fr;
      grid-template-rows: auto auto auto;
      text-align: left;
      padding: 20px;
      gap: 0 16px;
      align-items: center;
    }
    .lom-certified__card::before {
      left: 0;
      right: 0;
    }
    .lom-certified__badge {
      grid-row: 1 / 4;
      width: 48px;
      height: 48px;
      margin: 0;
    }
    .lom-certified__card-label {
      margin-bottom: 2px;
      font-size: 9px;
    }
    .lom-certified__card-title {
      font-size: 17px;
      margin-bottom: 4px;
    }
    .lom-certified__card-ref {
      font-size: 10px;
    }
    .lom-certified__secondary {
      gap: 20px 24px;
      justify-content: flex-start;
      padding-top: 24px;
      margin-bottom: 32px;
    }
    .lom-certified__detail-grid {
      grid-template-columns: 1fr;
      gap: 8px;
    }
    .lom-certified__detail-inner {
      padding: 20px;
    }
  }
</style>

<section class="lom-certified">
  <div class="lom-container">
    <div class="lom-certified__header">
      <div class="lom-certified__eyebrow">{{ section.settings.eyebrow }}</div>
      <h2 class="lom-certified__title">{{ section.settings.title }}</h2>
      {% if section.settings.subtitle != blank %}
        <p class="lom-certified__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    {%- comment -%} Main certification cards {%- endcomment -%}
    {% assign cert_blocks = section.blocks | where: 'type', 'certification' %}
    {% if cert_blocks.size > 0 %}
      <div class="lom-certified__grid">
        {% for block in cert_blocks %}
          <div class="lom-certified__card" {{ block.shopify_attributes }}>
            <div class="lom-certified__badge">
              {% case block.settings.icon %}
                {% when 'eu' %}
                  <svg viewBox="0 0 24 24" fill="none" stroke="var(--lt-terracotta)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 6l1 2h2l-1.5 1.5.5 2L12 10.5 10 11.5l.5-2L9 8h2z"/>
                    <path d="M8 14.5l.5 1h1l-.75.75.25 1-.75-.5L7.5 17.25l.25-1L7 15.5h1z"/>
                    <path d="M16 14.5l.5 1h1l-.75.75.25 1-.75-.5-.75.5.25-1L15 15.5h1z"/>
                  </svg>
                {% when 'fda' %}
                  <svg viewBox="0 0 24 24" fill="none" stroke="var(--lt-terracotta)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                    <polyline points="9 12 11 14 15 10"/>
                  </svg>
                {% when 'msds' %}
                  <svg viewBox="0 0 24 24" fill="none" stroke="var(--lt-terracotta)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                    <polyline points="9 15 11 17 15 13"/>
                  </svg>
                {% when 'shield' %}
                  <svg viewBox="0 0 24 24" fill="none" stroke="var(--lt-terracotta)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                  </svg>
                {% else %}
                  <svg viewBox="0 0 24 24" fill="none" stroke="var(--lt-terracotta)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                    <polyline points="9 12 11 14 15 10"/>
                  </svg>
              {% endcase %}
            </div>
            <div class="lom-certified__card-label">{{ block.settings.label }}</div>
            <div class="lom-certified__card-title">{{ block.settings.title }}</div>
            {% if block.settings.reference != blank %}
              <div class="lom-certified__card-ref">{{ block.settings.reference }}</div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {%- comment -%} Secondary compliance badges {%- endcomment -%}
    {% assign badge_blocks = section.blocks | where: 'type', 'badge' %}
    {% if badge_blocks.size > 0 %}
      <div class="lom-certified__secondary">
        {% for block in badge_blocks %}
          <div class="lom-certified__secondary-item" {{ block.shopify_attributes }}>
            <span class="lom-certified__secondary-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="var(--lt-emerald)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
            </span>
            <span class="lom-certified__secondary-text">{{ block.settings.text }}</span>
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {%- comment -%} Expandable full results {%- endcomment -%}
    {% if section.settings.show_detail %}
      <div class="lom-certified__detail" id="lom-cert-detail">
        <div class="lom-certified__detail-inner">
          <div class="lom-certified__detail-title">{{ section.settings.detail_title }}</div>
          <div class="lom-certified__detail-grid">
            {% assign detail_blocks = section.blocks | where: 'type', 'detail' %}
            {% for block in detail_blocks %}
              <div class="lom-certified__detail-row" {{ block.shopify_attributes }}>
                <span class="lom-certified__detail-check">
                  <svg viewBox="0 0 24 24" fill="none" stroke="var(--lt-emerald)" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                </span>
                <span class="lom-certified__detail-label">{{ block.settings.text }}</span>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="lom-certified__expand">
        <button type="button" class="lom-certified__expand-btn" id="lom-cert-toggle">
          <span id="lom-cert-toggle-text">{{ section.settings.expand_text | default: 'View Full Test Results' }}</span>
          <span class="lom-certified__expand-arrow">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"/></svg>
          </span>
        </button>
      </div>
    {% endif %}
  </div>
</section>

<script>
  (function(){
    var toggle = document.getElementById('lom-cert-toggle');
    var detail = document.getElementById('lom-cert-detail');
    var text = document.getElementById('lom-cert-toggle-text');
    if (!toggle || !detail) return;
    toggle.addEventListener('click', function(){
      var open = detail.classList.toggle('is-open');
      toggle.querySelector('.lom-certified__expand-arrow').style.transform = open ? 'rotate(180deg)' : '';
      text.textContent = open ? 'Hide Details' : '{{ section.settings.expand_text | default: "View Full Test Results" }}';
    });
  })();
</script>

