{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-about">
  {%- comment -%} ===== HERO ===== {%- endcomment -%}
  <div class="lom-about__hero">
    <div class="lom-about__hero-glow"></div>
    <div class="lom-container">
      <div class="lom-about__hero-content lom-reveal">
        {% if section.settings.eyebrow != blank %}
          <span class="lom-about__eyebrow">{{ section.settings.eyebrow }}</span>
        {% endif %}
        <h1 class="lom-about__title">{{ section.settings.heading }}</h1>
        {% if section.settings.subtitle != blank %}
          <p class="lom-about__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
    </div>
  </div>

  {%- comment -%} ===== NARRATIVE BLOCKS ===== {%- endcomment -%}
  {% assign narratives = section.blocks | where: 'type', 'narrative' %}
  {% if narratives.size > 0 %}
    <div class="lom-about__narratives">
      <div class="lom-container">
        {% for block in narratives %}
          {% assign n_index = forloop.index %}
          {% assign n_mod = n_index | modulo: 2 %}
          <div class="lom-about__narrative lom-reveal {% if n_mod == 0 %}lom-about__narrative--reverse{% endif %}" {{ block.shopify_attributes }}>
            <div class="lom-about__narrative-text">
              <span class="lom-about__narrative-num">{% if n_index < 10 %}0{% endif %}{{ n_index }}</span>
              <p>{{ block.settings.text }}</p>
            </div>
            {% if block.settings.image != blank %}
              <div class="lom-about__narrative-image">
                {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', alt: block.settings.text | truncate: 80 }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}

  {%- comment -%} ===== VALUES STRIP ===== {%- endcomment -%}
  {% assign values = section.blocks | where: 'type', 'value_pillar' %}
  {% if values.size > 0 %}
    <div class="lom-about__values">
      <div class="lom-container">
        <div class="lom-about__values-grid lom-reveal">
          {% for block in values %}
            <div class="lom-about__value" {{ block.shopify_attributes }}>
              <div class="lom-about__value-icon">
                {% case block.settings.icon %}
                  {% when 'leaf' %}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M17 8C8 10 5.9 16.17 3.82 21.34l1.89.66L7 18c4-2 7-4 10-8"/><path d="M2 2s7.5.5 11.5 4.5c3 3 4.5 7 4.5 7"/></svg>
                  {% when 'clock' %}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                  {% when 'globe' %}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10 15.3 15.3 0 01-4-10 15.3 15.3 0 014-10z"/></svg>
                  {% when 'shield' %}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><polyline points="9 12 11 14 15 10"/></svg>
                  {% when 'heart' %}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"/></svg>
                  {% else %}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/></svg>
                {% endcase %}
              </div>
              <h4 class="lom-about__value-label">{{ block.settings.label }}</h4>
              {% if block.settings.text != blank %}
                <p class="lom-about__value-text">{{ block.settings.text }}</p>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}

  {%- comment -%} ===== FOUNDER ===== {%- endcomment -%}
  {% assign founders = section.blocks | where: 'type', 'founder' %}
  {% for block in founders %}
    <div class="lom-about__founder-section">
      <div class="lom-container">
        <div class="lom-about__founder lom-reveal" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <div class="lom-about__founder-photo">
              {{ block.settings.image | image_url: width: 400 | image_tag: loading: 'lazy', alt: block.settings.name }}
            </div>
          {% else %}
            <div class="lom-about__founder-photo lom-about__founder-photo--placeholder">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round"><path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
            </div>
          {% endif %}
          <div class="lom-about__founder-info">
            <span class="lom-about__founder-label">Meet the Founder</span>
            <h3 class="lom-about__founder-name">{{ block.settings.name }}</h3>
            <span class="lom-about__founder-role">{{ block.settings.role }}</span>
            <blockquote class="lom-about__founder-story">"{{ block.settings.story }}"</blockquote>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}

  {%- comment -%} ===== CLOSING ===== {%- endcomment -%}
  {% assign closings = section.blocks | where: 'type', 'closing' %}
  {% for block in closings %}
    <div class="lom-about__closing lom-reveal" {{ block.shopify_attributes }}>
      <div class="lom-container">
        <p>{{ block.settings.text }}</p>
      </div>
    </div>
  {% endfor %}
</section>

<style>
  /* ===== ABOUT — BASE ===== */
  .lom-about {
    background: var(--lt-dark);
    color: var(--lt-text);
  }

  /* ===== HERO ===== */
  .lom-about__hero {
    position: relative;
    padding: 140px 0 100px;
    text-align: center;
    overflow: hidden;
  }
  .lom-about__hero-glow {
    position: absolute;
    top: -40%;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(212,175,106,0.08) 0%, transparent 70%);
    pointer-events: none;
  }
  .lom-about__hero-content {
    position: relative;
    z-index: 1;
  }
  .lom-about__eyebrow {
    display: inline-block;
    font-family: var(--lt-sans);
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 4px;
    text-transform: uppercase;
    color: var(--lt-gold);
    margin-bottom: 20px;
  }
  .lom-about__title {
    font-family: var(--lt-serif);
    font-size: clamp(32px, 5vw, 56px);
    color: var(--lt-cream);
    line-height: 1.1;
    max-width: 800px;
    margin: 0 auto 24px;
    font-weight: 400;
    letter-spacing: -0.04em;
  }
  .lom-about__subtitle {
    font-family: var(--lt-sans);
    font-size: 17px;
    line-height: 1.7;
    color: var(--lt-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  /* ===== NARRATIVES ===== */
  .lom-about__narratives {
    padding: 80px 0;
  }
  .lom-about__narrative {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    margin-bottom: 80px;
  }
  .lom-about__narrative:last-child {
    margin-bottom: 0;
  }
  .lom-about__narrative--reverse {
    direction: rtl;
  }
  .lom-about__narrative--reverse > * {
    direction: ltr;
  }
  .lom-about__narrative-num {
    display: block;
    font-family: var(--lt-serif);
    font-size: 64px;
    font-weight: 300;
    color: rgba(212,175,106,0.12);
    line-height: 1;
    margin-bottom: 16px;
    letter-spacing: -0.04em;
  }
  .lom-about__narrative-text p {
    font-family: var(--lt-sans);
    font-size: 17px;
    line-height: 1.8;
    color: var(--lt-text);
    margin: 0;
  }
  .lom-about__narrative-image {
    border-radius: 12px;
    overflow: hidden;
  }
  .lom-about__narrative-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    aspect-ratio: 4/3;
  }

  /* ===== VALUES STRIP ===== */
  .lom-about__values {
    padding: 80px 0;
    border-top: 1px solid var(--lt-border);
    border-bottom: 1px solid var(--lt-border);
  }
  .lom-about__values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
    text-align: center;
  }
  .lom-about__value-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: rgba(212,175,106,0.08);
    border: 1px solid rgba(212,175,106,0.15);
    color: var(--lt-gold);
  }
  .lom-about__value-icon svg {
    width: 22px;
    height: 22px;
  }
  .lom-about__value-label {
    font-family: var(--lt-sans);
    font-size: 14px;
    font-weight: 600;
    color: var(--lt-cream);
    margin: 0 0 6px;
    letter-spacing: 0.3px;
  }
  .lom-about__value-text {
    font-family: var(--lt-sans);
    font-size: 13px;
    line-height: 1.6;
    color: var(--lt-text-muted);
    margin: 0;
  }

  /* ===== FOUNDER ===== */
  .lom-about__founder-section {
    padding: 80px 0;
  }
  .lom-about__founder {
    display: flex;
    align-items: flex-start;
    gap: 40px;
    padding: 48px;
    background: var(--lt-glass);
    border-radius: 16px;
    border: 1px solid var(--lt-border);
    max-width: 800px;
    margin: 0 auto;
  }
  .lom-about__founder-photo {
    flex-shrink: 0;
    width: 140px;
    height: 140px;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid rgba(212,175,106,0.2);
  }
  .lom-about__founder-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .lom-about__founder-photo--placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(212,175,106,0.06);
    color: var(--lt-gold);
  }
  .lom-about__founder-photo--placeholder svg {
    width: 48px;
    height: 48px;
    opacity: 0.4;
  }
  .lom-about__founder-info {
    flex: 1;
  }
  .lom-about__founder-label {
    display: block;
    font-family: var(--lt-sans);
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: var(--lt-gold);
    margin-bottom: 8px;
  }
  .lom-about__founder-name {
    font-family: var(--lt-serif);
    font-size: 28px;
    color: var(--lt-cream);
    margin: 0 0 4px;
    font-weight: 400;
  }
  .lom-about__founder-role {
    font-family: var(--lt-sans);
    font-size: 13px;
    color: var(--lt-text-muted);
    display: block;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  .lom-about__founder-story {
    font-family: var(--lt-serif);
    font-size: 18px;
    line-height: 1.7;
    color: var(--lt-text);
    margin: 0;
    padding: 0;
    border: none;
    font-style: italic;
  }

  /* ===== CLOSING ===== */
  .lom-about__closing {
    padding: 80px 0;
    text-align: center;
    border-top: 1px solid var(--lt-border);
  }
  .lom-about__closing p {
    font-family: var(--lt-serif);
    font-size: clamp(20px, 3vw, 28px);
    line-height: 1.5;
    color: var(--lt-gold);
    max-width: 700px;
    margin: 0 auto;
    font-style: italic;
    font-weight: 400;
  }

  /* ===== MOBILE ===== */
  @media (max-width: 768px) {
    .lom-about__hero {
      padding: 100px 0 72px;
    }
    .lom-about__narratives {
      padding: 56px 0;
    }
    .lom-about__narrative {
      grid-template-columns: 1fr;
      gap: 24px;
      margin-bottom: 56px;
    }
    .lom-about__narrative--reverse {
      direction: ltr;
    }
    .lom-about__narrative-num {
      font-size: 48px;
    }
    .lom-about__narrative-text p {
      font-size: 15px;
    }
    .lom-about__values {
      padding: 56px 0;
    }
    .lom-about__values-grid {
      grid-template-columns: 1fr 1fr;
      gap: 32px;
    }
    .lom-about__founder-section {
      padding: 56px 0;
    }
    .lom-about__founder {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 32px 24px;
      gap: 24px;
    }
    .lom-about__founder-photo {
      width: 110px;
      height: 110px;
    }
    .lom-about__founder-story {
      font-size: 16px;
    }
    .lom-about__closing {
      padding: 56px 0;
    }
  }
</style>

