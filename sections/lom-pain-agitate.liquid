{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-pain">
  <div class="lom-container">
    <div class="lom-pain__inner">
      {% if section.settings.eyebrow != blank %}
        <span class="lom-pain__eyebrow lom-fade-in">{{ section.settings.eyebrow }}</span>
      {% endif %}
      <h2 class="lom-pain__heading lom-fade-in">{{ section.settings.heading }}</h2>

      <div class="lom-pain__list">
        {% for block in section.blocks %}
          <div class="lom-pain__row lom-fade-in" {{ block.shopify_attributes }}>
            <span class="lom-pain__x">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
            </span>
            <div class="lom-pain__text">
              <strong>{{ block.settings.title }}</strong>
              <span>â€” {{ block.settings.text }}</span>
            </div>
          </div>
        {% endfor %}
      </div>

      {% if section.settings.transition_line != blank %}
        <p class="lom-pain__transition lom-fade-in">{{ section.settings.transition_line }}</p>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .lom-pain {
    padding: 80px 0;
    background: var(--lt-ivory);
  }
  .lom-pain__inner {
    max-width: 640px;
    margin: 0 auto;
    text-align: center;
  }
  .lom-pain__eyebrow {
    display: block;
    font-family: var(--lt-sans);
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 3px;
    color: var(--lt-terracotta);
    margin-bottom: 16px;
  }
  .lom-pain__heading {
    font-family: var(--lt-serif);
    font-size: clamp(28px, 5vw, 42px);
    font-weight: 400;
    line-height: 1.12;
    color: var(--lt-brown-black);
    margin: 0 0 48px;
  }
  .lom-pain__list {
    text-align: left;
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  .lom-pain__row {
    display: flex;
    align-items: baseline;
    gap: 14px;
    padding: 18px 0;
    border-bottom: 1px solid var(--lt-border);
  }
  .lom-pain__row:first-child {
    border-top: 1px solid var(--lt-border);
  }
  .lom-pain__x {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 10px;
    background: var(--lt-white);
    border: 1px solid var(--lt-border);
    color: var(--lt-warm-gray);
    position: relative;
    top: 2px;
    box-shadow: 0 1px 3px rgba(42,37,32,0.04);
  }
  .lom-pain__x svg {
    width: 13px;
    height: 13px;
    stroke-width: 2;
  }
  .lom-pain__text {
    font-family: var(--lt-sans);
    font-size: 15px;
    line-height: 1.6;
    color: var(--lt-warm-gray);
  }
  .lom-pain__text strong {
    color: var(--lt-brown-black);
    font-weight: 600;
  }
  .lom-pain__transition {
    margin-top: 40px;
    font-family: var(--lt-serif);
    font-size: clamp(20px, 3.5vw, 26px);
    font-weight: 400;
    font-style: italic;
    line-height: 1.3;
    color: var(--lt-emerald-dark);
  }

  @media (max-width: 768px) {
    .lom-pain {
      padding: 48px 0;
    }
    .lom-pain__heading {
      margin-bottom: 32px;
    }
    .lom-pain__row {
      padding: 14px 0;
      gap: 12px;
    }
    .lom-pain__text {
      font-size: 14px;
    }
    .lom-pain__transition {
      margin-top: 28px;
    }
  }
</style>

{% schema %}
{
  "name": "Lom Pain Agitation",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Sound familiar?"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "You've Tried Everything. Nothing Sticks."
    },
    {
      "type": "textarea",
      "id": "transition_line",
      "label": "Transition line (below list)",
      "default": "What if relief didn't come with a tradeoff?"
    }
  ],
  "blocks": [
    {
      "type": "pain_card",
      "name": "Pain point",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Pain point",
          "default": "Energy drinks & coffee"
        },
        {
