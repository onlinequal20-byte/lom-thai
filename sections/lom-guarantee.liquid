{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-guarantee">
  <div class="lom-container">
    <div class="lom-guarantee__inner lom-reveal">
      <div class="lom-guarantee__badge">
        <div class="lom-guarantee__shield">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
        </div>
        <span class="lom-guarantee__badge-number">30</span>
        <span class="lom-guarantee__badge-text">Day Guarantee</span>
      </div>
      <div class="lom-guarantee__content">
        <h2 class="lom-guarantee__heading-full">{{ section.settings.heading }}</h2>
        <h2 class="lom-guarantee__heading-short">{{ section.settings.heading_short | default: "30-Day Money-Back Guarantee" }}</h2>
        <p class="lom-guarantee__desc">{{ section.settings.text }}</p>
        <p class="lom-guarantee__loss-aversion"><em>{{ section.settings.loss_aversion_text }}</em></p>
        <a href="/pages/faq" class="lom-guarantee__faq-link">FAQ â†’</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Lom Guarantee",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Try It for 30 Days. If It Doesn't Change How You Handle Your Worst Days, We'll Refund Every Penny."
    },
    {
      "type": "text",
      "id": "heading_short",
      "label": "Short heading (mobile)",
      "default": "30-Day Money-Back Guarantee"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "No forms. No fine print. No 'restocking fees.' Just email us and we send your money back. We can afford to do this because 97% of people never ask."
    },
    {
      "type": "text",
      "id": "loss_aversion_text",
      "label": "Loss Aversion Text",
      "default": "The only risk is spending another month reaching for chemicals."
    }
  ],
  "presets": [
    {
      "name": "Lom Guarantee"
    }
  ]
}
{% endschema %}

