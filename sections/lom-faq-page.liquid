{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-faq-page">
  {%- comment -%} ===== HERO ===== {%- endcomment -%}
  <div class="lom-faq-page__hero">
    <div class="lom-faq-page__hero-glow"></div>
    <div class="lom-container">
      <div class="lom-faq-page__hero-content lom-reveal">
        {% if section.settings.eyebrow != blank %}
          <span class="lom-about__eyebrow">{{ section.settings.eyebrow }}</span>
        {% endif %}
        <h1 class="lom-about__title">{{ section.settings.heading }}</h1>
        {% if section.settings.subtitle != blank %}
          <p class="lom-about__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
    </div>
  </div>

  {%- comment -%} ===== FAQ CATEGORIES ===== {%- endcomment -%}
  {% assign categories = section.blocks | map: 'settings' | map: 'category' | uniq %}
  {% for cat in categories %}
    <div class="lom-faq-page__category">
      <div class="lom-container">
        <h2 class="lom-faq-page__cat-title">{{ cat }}</h2>
        <div class="lom-faq-list">
          {% for block in section.blocks %}
            {% if block.settings.category == cat %}
              <div class="lom-faq-item lom-fade-in" {{ block.shopify_attributes }}>
                <button class="lom-faq-question" onclick="this.parentElement.classList.toggle('active')">
                  {{ block.settings.question }}
                  <span class="lom-faq-toggle">+</span>
                </button>
                <div class="lom-faq-answer">
                  <p>{{ block.settings.answer }}</p>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  {% endfor %}

  {%- comment -%} ===== STILL HAVE QUESTIONS CTA ===== {%- endcomment -%}
  <div class="lom-faq-page__cta">
    <div class="lom-container">
      <div class="lom-faq-page__cta-card lom-reveal">
        <div class="lom-faq-page__cta-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 01-2 2H7l-4 4V5a2 2 0 012-2h14a2 2 0 012 2z"/></svg>
        </div>
        <h3 class="lom-faq-page__cta-heading">{{ section.settings.cta_heading }}</h3>
        <p class="lom-faq-page__cta-text">{{ section.settings.cta_text }}</p>
        <a href="{{ section.settings.cta_url }}" class="lom-btn lom-btn--primary">{{ section.settings.cta_button }}</a>
      </div>
    </div>
  </div>
</section>

<style>
  /* ===== FAQ PAGE — BASE ===== */
  .lom-faq-page {
    background: var(--lt-dark);
    color: var(--lt-text);
  }

  /* ===== HERO ===== */
  .lom-faq-page__hero {
    position: relative;
    padding: 140px 0 80px;
    text-align: center;
    overflow: hidden;
  }
  .lom-faq-page__hero-glow {
    position: absolute;
    top: -40%;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(212,175,106,0.08) 0%, transparent 70%);
    pointer-events: none;
  }
  .lom-faq-page__hero-content {
    position: relative;
    z-index: 1;
  }

  /* ===== CATEGORIES ===== */
  .lom-faq-page__category {
    padding: 48px 0;
    border-bottom: 1px solid var(--lt-border);
  }
  .lom-faq-page__category:last-of-type {
    border-bottom: none;
  }
  .lom-faq-page__cat-title {
    font-family: var(--lt-serif);
    font-size: clamp(22px, 3vw, 32px);
    color: var(--lt-gold);
    font-weight: 400;
    letter-spacing: -0.02em;
    margin: 0 0 32px;
  }

  /* ===== STILL HAVE QUESTIONS CTA ===== */
  .lom-faq-page__cta {
    padding: 80px 0;
  }
  .lom-faq-page__cta-card {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
    padding: 56px 40px;
    background: var(--lt-glass);
    border-radius: 16px;
    border: 1px solid var(--lt-border);
  }
  .lom-faq-page__cta-icon {
    width: 56px;
    height: 56px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: rgba(212,175,106,0.08);
    border: 1px solid rgba(212,175,106,0.15);
    color: var(--lt-gold);
  }
  .lom-faq-page__cta-icon svg {
    width: 24px;
    height: 24px;
  }
  .lom-faq-page__cta-heading {
    font-family: var(--lt-serif);
    font-size: clamp(22px, 3vw, 30px);
    color: var(--lt-cream);
    font-weight: 400;
    margin: 0 0 12px;
  }
  .lom-faq-page__cta-text {
    font-family: var(--lt-sans);
    font-size: 15px;
    line-height: 1.7;
    color: var(--lt-text-muted);
    margin: 0 0 28px;
  }

  /* ===== MOBILE ===== */
  @media (max-width: 768px) {
    .lom-faq-page__hero {
      padding: 100px 0 56px;
    }
    .lom-faq-page__category {
      padding: 32px 0;
    }
    .lom-faq-page__cta {
      padding: 56px 0;
    }
    .lom-faq-page__cta-card {
      padding: 40px 24px;
    }
  }
</style>

