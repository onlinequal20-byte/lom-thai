{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<footer class="lom-footer">
  {%- comment -%} Top: Brand + Newsletter {%- endcomment -%}
  <div class="lom-footer__top">
    <div class="lom-container">
      <div class="lom-footer__top-grid">
        <div class="lom-footer__brand">
          <h2 class="lom-footer__tagline">{{ section.settings.tagline }}</h2>
          <p class="lom-footer__tagline-sub">{{ section.settings.tagline_sub }}</p>
        </div>
        {% for block in section.blocks %}
          {% if block.type == 'newsletter' %}
            <div class="lom-footer__newsletter" {{ block.shopify_attributes }}>
              <h4 class="lom-footer__col-title">{{ block.settings.title }}</h4>
              <p class="lom-footer__newsletter-text">{{ block.settings.text }}</p>
              {% form 'customer', class: 'lom-footer__newsletter-form' %}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="lom-footer__newsletter-input-wrap">
                  <input type="email" name="contact[email]" placeholder="{{ block.settings.placeholder }}" required class="lom-footer__newsletter-input">
                  <button type="submit" class="lom-footer__newsletter-btn" aria-label="Subscribe">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
                  </button>
                </div>
              {% endform %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  {%- comment -%} Middle: Menu columns {%- endcomment -%}
  {% assign menus = section.blocks | where: 'type', 'menu' %}
  {% if menus.size > 0 %}
    <div class="lom-footer__columns">
      <div class="lom-container">
        <div class="lom-footer__menu-grid">
          {% for block in menus %}
            <div class="lom-footer__col" {{ block.shopify_attributes }}>
              <h4 class="lom-footer__col-title">{{ block.settings.title }}</h4>
              {% if block.settings.menu != blank %}
                <ul class="lom-footer__links">
                  {% for link in block.settings.menu.links %}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}

  {%- comment -%} Bottom bar {%- endcomment -%}
  <div class="lom-footer__bottom">
    <div class="lom-container">
      <div class="lom-footer__bottom-inner">
        <div class="lom-footer__bottom-left">
          <p class="lom-footer__copyright">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
          {% if section.settings.origin_text != blank %}
            <p class="lom-footer__origin">{{ section.settings.origin_text }}</p>
          {% endif %}
        </div>
        <div class="lom-footer__bottom-center">
          <nav class="lom-footer__legal">
            <a href="/pages/faq">FAQ</a>
            <a href="/policies/terms-of-service">Terms</a>
            <a href="/policies/privacy-policy">Privacy</a>
            <a href="/policies/shipping-policy">Shipping</a>
            <a href="/policies/refund-policy">Refunds</a>
          </nav>
        </div>
        <div class="lom-footer__bottom-right">
          <div class="lom-footer__social">
            {% if section.settings.social_instagram != blank %}
              <a href="{{ section.settings.social_instagram }}" aria-label="Instagram" target="_blank" rel="noopener">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="5"/><circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none"/></svg>
              </a>
            {% endif %}
            {% if section.settings.social_tiktok != blank %}
              <a href="{{ section.settings.social_tiktok }}" aria-label="TikTok" target="_blank" rel="noopener">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-2.88 2.5 2.89 2.89 0 01-2.89-2.89 2.89 2.89 0 012.89-2.89c.28 0 .54.04.79.1v-3.5a6.37 6.37 0 00-.79-.05A6.34 6.34 0 003.15 15.2a6.34 6.34 0 0010.86 4.48V13a8.28 8.28 0 005.58 2.16V11.7a4.83 4.83 0 01-3.59-1.42V6.69h3.59z"/></svg>
              </a>
            {% endif %}
            {% if section.settings.social_facebook != blank %}
              <a href="{{ section.settings.social_facebook }}" aria-label="Facebook" target="_blank" rel="noopener">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg>
              </a>
            {% endif %}
          </div>
          <div class="lom-footer__payment">
            {{ shop.enabled_payment_types | payment_type_svg_tag }}
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .lom-footer {
    background: var(--lt-brown-black);
    color: rgba(245,240,234,0.6);
  }

  /* ===== TOP: Brand + Newsletter ===== */
  .lom-footer__top {
    padding: 72px 0 56px;
    border-bottom: 1px solid rgba(245,240,234,0.08);
  }
  .lom-footer__top-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 64px;
    align-items: center;
  }
  .lom-footer__tagline {
    font-family: var(--lt-serif);
    font-size: clamp(28px, 3.5vw, 40px);
    font-weight: 400;
    color: var(--lt-ivory);
    margin: 0 0 8px;
    line-height: 1.15;
    letter-spacing: -0.03em;
  }
  .lom-footer__tagline-sub {
    font-size: 14px;
    color: rgba(245,240,234,0.5);
    margin: 0;
    font-family: var(--lt-sans);
    line-height: 1.6;
  }

  /* Newsletter */
  .lom-footer__col-title {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 2.5px;
    font-weight: 600;
    color: var(--lt-terracotta);
    margin: 0 0 16px;
    font-family: var(--lt-sans);
  }
  .lom-footer__newsletter-text {
    font-size: 14px;
    color: rgba(245,240,234,0.5);
    margin: 0 0 16px;
    line-height: 1.6;
    font-family: var(--lt-sans);
  }
  .lom-footer__newsletter-input-wrap {
    display: flex;
    border: 1px solid rgba(245,240,234,0.12);
    border-radius: 10px;
    overflow: hidden;
    background: rgba(245,240,234,0.04);
    transition: border-color 0.2s;
  }
  .lom-footer__newsletter-input-wrap:focus-within {
    border-color: rgba(196,122,90,0.4);
  }
  .lom-footer__newsletter-input {
    flex: 1;
    background: transparent;
    border: none;
    padding: 14px 16px;
    color: var(--lt-ivory);
    font-size: 14px;
    outline: none;
    font-family: var(--lt-sans);
  }
  .lom-footer__newsletter-input::placeholder {
    color: rgba(245,240,234,0.3);
  }
  .lom-footer__newsletter-btn {
    background: var(--lt-terracotta);
    border: none;
    padding: 14px 20px;
    cursor: pointer;
    color: var(--lt-ivory);
    transition: background 0.2s;
    display: flex;
    align-items: center;
  }
  .lom-footer__newsletter-btn:hover {
    background: var(--lt-terracotta-dark);
  }

  /* ===== MIDDLE: Menu Columns ===== */
  .lom-footer__columns {
    padding: 48px 0;
    border-bottom: 1px solid rgba(245,240,234,0.08);
  }
  .lom-footer__menu-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 32px;
  }
  .lom-footer__links {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .lom-footer__links li {
    margin-bottom: 10px;
  }
  .lom-footer__links a {
    color: rgba(245,240,234,0.5);
    text-decoration: none;
    font-size: 14px;
    transition: color 0.2s;
    font-family: var(--lt-sans);
  }
  .lom-footer__links a:hover {
    color: var(--lt-ivory);
  }

  /* ===== BOTTOM BAR ===== */
  .lom-footer__bottom {
    padding: 24px 0;
  }
  .lom-footer__bottom-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
  }
  .lom-footer__bottom-left {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  .lom-footer__copyright {
    font-size: 12px;
    color: rgba(245,240,234,0.35);
    margin: 0;
    font-family: var(--lt-sans);
  }
  .lom-footer__origin {
    font-size: 12px;
    color: rgba(245,240,234,0.35);
    margin: 0;
    font-family: var(--lt-sans);
  }
  .lom-footer__legal {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
  }
  .lom-footer__legal a {
    font-size: 11px;
    color: rgba(245,240,234,0.35);
    text-decoration: none;
    font-family: var(--lt-sans);
    transition: color 0.2s;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  .lom-footer__legal a:hover {
    color: var(--lt-ivory);
  }
  .lom-footer__bottom-right {
    display: flex;
    align-items: center;
    gap: 20px;
  }
  .lom-footer__social {
    display: flex;
    gap: 14px;
  }
  .lom-footer__social a {
    color: rgba(245,240,234,0.4);
    transition: color 0.2s;
  }
  .lom-footer__social a:hover {
    color: var(--lt-terracotta);
  }
  .lom-footer__payment {
    display: flex;
    gap: 6px;
    opacity: 0.25;
  }
  .lom-footer__payment svg {
    height: 22px;
    width: auto;
  }

  /* ===== MOBILE ===== */
  @media (max-width: 768px) {
    .lom-footer__top {
      padding: 48px 0 40px;
    }
    .lom-footer__top-grid {
      grid-template-columns: 1fr;
      gap: 36px;
    }
    .lom-footer__brand {
      text-align: center;
    }
    .lom-footer__tagline {
      font-size: clamp(24px, 7vw, 32px);
    }
    .lom-footer__columns {
      padding: 36px 0;
    }
    .lom-footer__menu-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 24px;
    }
    .lom-footer__col-title {
      font-size: 10px;
      margin-bottom: 12px;
    }
    .lom-footer__links a {
      font-size: 13px;
    }
    .lom-footer__links li {
      margin-bottom: 8px;
    }
    .lom-footer__bottom-inner {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 14px;
    }
    .lom-footer__bottom-left {
      align-items: center;
    }
    .lom-footer__legal {
      justify-content: center;
      gap: 10px 14px;
    }
    .lom-footer__bottom-right {
      flex-direction: column;
      gap: 14px;
    }
    .lom-footer__social {
      justify-content: center;
    }
    .lom-footer__payment {
      justify-content: center;
      flex-wrap: wrap;
    }
  }
</style>

