    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Watch how people actually use Siam Lom in their daily routine"
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "UGC Video",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "poster",
          "label": "Poster / thumbnail image"
        },
        {
          "type": "text",
          "id": "video_url",
          "label": "Video URL (MP4 link or Shopify file URL)"
        },
        {
          "type": "video",
          "id": "shopify_video",
          "label": "Or upload a Shopify video"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Creator name",
          "default": "Sarah M."
        },
        {
          "type": "text",
          "id": "label",
          "label": "Caption / label",
          "default": "Verified Buyer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "UGC Videos",
      "blocks": [
        { "type": "video", "settings": { "name": "Sarah M.", "label": "Verified Buyer" } },
        { "type": "video", "settings": { "name": "Marco V.", "label": "Verified Buyer" } },
        { "type": "video", "settings": { "name": "Anna P.", "label": "Verified Buyer" } }
