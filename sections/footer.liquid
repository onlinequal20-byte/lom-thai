<style>
  .lom-footer {
    background: #1a1a2e;
    color: #ccc;
    font-family: var(--font-body-family, sans-serif);
    padding: 60px 0 0;
  }
  .lom-footer a {
    color: #ccc;
    text-decoration: none;
    transition: color 0.2s;
  }
  .lom-footer a:hover {
    color: #fff;
  }
  .lom-footer__grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px 48px;
  }
  @media (max-width: 749px) {
    .lom-footer__grid {
      grid-template-columns: 1fr 1fr;
      gap: 32px 24px;
    }
  }
  @media (max-width: 449px) {
    .lom-footer__grid {
      grid-template-columns: 1fr;
    }
  }
  .lom-footer__heading {
    color: #fff;
    font-size: 16px;
    font-weight: 700;
    margin: 0 0 16px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  .lom-footer__brand-text {
    font-size: 14px;
    line-height: 1.6;
    margin-bottom: 20px;
  }
  .lom-footer__social {
    display: flex;
    gap: 12px;
  }
  .lom-footer__social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(255,255,255,0.1);
    transition: background 0.2s;
  }
  .lom-footer__social a:hover {
    background: rgba(255,255,255,0.2);
  }
  .lom-footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .lom-footer__links li {
    margin-bottom: 10px;
  }
  .lom-footer__links a {
    font-size: 14px;
  }
  .lom-footer__contact p {
    font-size: 14px;
    margin: 0 0 8px;
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .lom-footer__newsletter {
    max-width: 1200px;
    margin: 0 auto;
    padding: 32px 24px;
    border-top: 1px solid rgba(255,255,255,0.1);
    text-align: center;
  }
  .lom-footer__newsletter-heading {
    color: #fff;
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 12px;
  }
  .lom-footer__newsletter-form {
    display: flex;
    justify-content: center;
    gap: 8px;
    max-width: 440px;
    margin: 0 auto;
  }
  .lom-footer__newsletter-input {
    flex: 1;
    padding: 10px 16px;
    border: 1px solid rgba(255,255,255,0.2);
    border-radius: 6px;
    background: rgba(255,255,255,0.08);
    color: #fff;
    font-size: 14px;
  }
  .lom-footer__newsletter-input::placeholder {
    color: rgba(255,255,255,0.5);
  }
  .lom-footer__newsletter-btn {
    padding: 10px 24px;
    border: none;
    border-radius: 6px;
    background: #e8c9b8;
    color: #1a1a2e;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: opacity 0.2s;
  }
  .lom-footer__newsletter-btn:hover {
    opacity: 0.85;
  }
  .lom-footer__bottom {
    max-width: 1200px;
    margin: 0 auto;
    padding: 24px;
    border-top: 1px solid rgba(255,255,255,0.1);
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
  }
  .lom-footer__copyright {
    font-size: 13px;
    color: rgba(255,255,255,0.5);
  }
  .lom-footer__payment-icons {
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
  }
  .lom-footer__payment-icons li {
    list-style: none;
  }
  .lom-footer__payment-icons .icon {
    height: 24px;
    width: auto;
  }
</style>

<footer class="lom-footer">
  <div class="lom-footer__grid">
    {%- comment -%} Column 1: Brand {%- endcomment -%}
    <div>
      <h3 class="lom-footer__heading">{{ shop.name }}</h3>
      <p class="lom-footer__brand-text">{{ section.settings.brand_description | default: 'Premium natural wellness products crafted with care. Discover the power of nature for your daily routine.' }}</p>
      <div class="lom-footer__social">
        {%- if settings.social_facebook_link != blank -%}
          <a href="{{ settings.social_facebook_link }}" aria-label="Facebook">
            <svg width="18" height="18" fill="#fff" viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg>
          </a>
        {%- endif -%}
        {%- if settings.social_instagram_link != blank -%}
          <a href="{{ settings.social_instagram_link }}" aria-label="Instagram">
            <svg width="18" height="18" fill="none" stroke="#fff" stroke-width="2" viewBox="0 0 24 24"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="5"/><circle cx="17.5" cy="6.5" r="1.5" fill="#fff" stroke="none"/></svg>
          </a>
        {%- endif -%}
        {%- if settings.social_tiktok_link != blank -%}
          <a href="{{ settings.social_tiktok_link }}" aria-label="TikTok">
            <svg width="18" height="18" fill="#fff" viewBox="0 0 24 24"><path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-2.88 2.5 2.89 2.89 0 01-2.89-2.89 2.89 2.89 0 012.89-2.89c.28 0 .54.04.79.1v-3.5a6.37 6.37 0 00-.79-.05A6.34 6.34 0 003.15 15a6.34 6.34 0 006.34 6.34 6.34 6.34 0 006.34-6.34V8.75a8.18 8.18 0 004.76 1.52V6.83a4.83 4.83 0 01-1-.14z"/></svg>
          </a>
        {%- endif -%}
        {%- if settings.social_twitter_link != blank -%}
          <a href="{{ settings.social_twitter_link }}" aria-label="Twitter">
            <svg width="18" height="18" fill="#fff" viewBox="0 0 24 24"><path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/></svg>
          </a>
        {%- endif -%}
        {%- if settings.social_youtube_link != blank -%}
          <a href="{{ settings.social_youtube_link }}" aria-label="YouTube">
            <svg width="18" height="18" fill="#fff" viewBox="0 0 24 24"><path d="M22.54 6.42a2.78 2.78 0 00-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 00-1.94 2A29 29 0 001 11.75a29 29 0 00.46 5.33A2.78 2.78 0 003.4 19.1c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 001.94-2 29 29 0 00.46-5.25 29 29 0 00-.46-5.43z"/><polygon fill="#1a1a2e" points="9.75,15.02 15.5,11.75 9.75,8.48"/></svg>
          </a>
        {%- endif -%}
      </div>
    </div>

    {%- comment -%} Column 2: Shop {%- endcomment -%}
    <div>
      <h3 class="lom-footer__heading">Shop</h3>
      <ul class="lom-footer__links">
        <li><a href="/">Home</a></li>
        <li><a href="/collections/all">Catalog</a></li>
        <li><a href="/pages/contact">Contact</a></li>
      </ul>
    </div>

    {%- comment -%} Column 3: Information {%- endcomment -%}
    <div>
      <h3 class="lom-footer__heading">Information</h3>
      <ul class="lom-footer__links">
        <li><a href="/search">Search</a></li>
        {%- for policy in shop.policies -%}
          {%- if policy != blank -%}
            <li><a href="{{ policy.url }}">{{ policy.title | escape }}</a></li>
          {%- endif -%}
        {%- endfor -%}
      </ul>
    </div>

    {%- comment -%} Column 4: Contact {%- endcomment -%}
    <div>
      <h3 class="lom-footer__heading">Contact</h3>
      <div class="lom-footer__contact">
        <p>
          <svg width="16" height="16" fill="none" stroke="#ccc" stroke-width="2" viewBox="0 0 24 24"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
          {{ section.settings.contact_email | default: 'support@' | append: shop.domain }}
        </p>
      </div>
    </div>
  </div>

  {%- if section.settings.newsletter_enable -%}
    <div class="lom-footer__newsletter">
      <h3 class="lom-footer__newsletter-heading">{{ section.settings.newsletter_heading | default: 'Subscribe to our newsletter' }}</h3>
      {%- form 'customer', id: 'ContactFooter', class: 'lom-footer__newsletter-form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <input
          type="email"
          name="contact[email]"
          class="lom-footer__newsletter-input"
          value="{{ form.email }}"
          aria-required="true"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          placeholder="{{ 'newsletter.label' | t }}"
          required
        >
        <button type="submit" class="lom-footer__newsletter-btn" name="commit">
          Subscribe
        </button>
      {%- endform -%}
    </div>
  {%- endif -%}

  <div class="lom-footer__bottom">
    <div class="lom-footer__copyright">
      &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
    </div>
    {%- if section.settings.payment_enable -%}
      <ul class="lom-footer__payment-icons" role="list">
        {%- for type in shop.enabled_payment_types -%}
          <li>{{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}</li>
        {%- endfor -%}
      </ul>
    {%- endif -%}
  </div>
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "link_list",
      "name": "t:sections.footer.blocks.link_list.name",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "t:sections.footer.blocks.link_list.settings.heading.default",
          "label": "t:sections.footer.blocks.link_list.settings.heading.label"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "t:sections.footer.blocks.link_list.settings.menu.label"
        }
      ]
    },
    {
      "type": "brand_information",
      "name": "t:sections.footer.blocks.brand_information.name",
      "settings": [
        {
          "type": "paragraph",
          "content": "t:sections.footer.blocks.brand_information.settings.paragraph.content"
        },
        {
          "type": "checkbox",
          "id": "show_social",
          "default": true,
          "label": "t:sections.footer.blocks.brand_information.settings.show_social.label",
          "info": "t:sections.footer.blocks.brand_information.settings.show_social.info"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.footer.blocks.text.name",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "t:sections.footer.blocks.text.settings.heading.default",
          "label": "t:sections.footer.blocks.text.settings.heading.label"
        },
        {
          "type": "richtext",
          "id": "subtext",
          "default": "t:sections.footer.blocks.text.settings.subtext.default",
          "label": "t:sections.footer.blocks.text.settings.subtext.label"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "min": 50,
          "max": 550,
          "step": 5,
          "unit": "px",
          "label": "Width",
          "default": 100
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Alignment",
          "options": [
            {
              "value": "",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "textarea",
      "id": "brand_description",
      "label": "Brand description",
      "default": "Premium natural wellness products crafted with care. Discover the power of nature for your daily routine."
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Contact email"
    },
    {
      "type": "header",
      "content": "t:sections.footer.settings.header__1.content",
      "info": "t:sections.footer.settings.header__1.info"
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "default": true,
      "label": "t:sections.footer.settings.newsletter_enable.label"
    },
    {
      "type": "inline_richtext",
      "id": "newsletter_heading",
      "default": "Subscribe to our newsletter",
      "label": "t:sections.footer.settings.newsletter_heading.label"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "default": true,
      "label": "t:sections.footer.settings.show_social.label",
      "info": "t:sections.footer.settings.show_social.info"
    },
    {
      "type": "checkbox",
      "id": "payment_enable",
      "default": true,
      "label": "t:sections.footer.settings.payment_enable.label"
    },
    {
      "type": "checkbox",
      "id": "show_policy",
      "default": true,
      "label": "t:sections.footer.settings.show_policy.label",
      "info": "t:sections.footer.settings.show_policy.info"
    },
    {
      "type": "header",
      "content": "t:sections.all.spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.footer.settings.margin_top.label",
      "default": 0
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
