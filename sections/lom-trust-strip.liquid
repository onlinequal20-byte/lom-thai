<style>
  .lom-trust-strip {
    padding: 32px 0;
    background: var(--lt-brown-black, #2a2520);
  }
  .lom-trust-strip .lom-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }
  .lom-trust-strip__row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0;
    text-align: center;
  }
  .lom-trust-strip__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    padding: 8px 12px;
    position: relative;
  }
  .lom-trust-strip__item:not(:last-child)::after {
    content: '';
    position: absolute;
    right: 0;
    top: 20%;
    height: 60%;
    width: 1px;
    background: rgba(255,255,255,0.1);
  }
  .lom-trust-strip__number {
    font-family: var(--lt-serif, 'Cormorant Garamond', serif);
    font-size: 28px;
    font-weight: 500;
    color: var(--lt-ivory, #f5f0e8);
    line-height: 1.1;
    letter-spacing: -0.02em;
  }
  .lom-trust-strip__label {
    font-family: var(--lt-sans, 'DM Sans', sans-serif);
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: rgba(245,240,232,0.5);
    font-weight: 500;
  }
  @media (max-width: 768px) {
    .lom-trust-strip {
      padding: 24px 0;
    }
    .lom-trust-strip__row {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px 0;
    }
    .lom-trust-strip__item:nth-child(2)::after {
      display: none;
    }
    .lom-trust-strip__number {
      font-size: 24px;
    }
    .lom-trust-strip__label {
      font-size: 9px;
    }
  }
</style>

<section class="lom-trust-strip">
  <div class="lom-container">
    <div class="lom-trust-strip__row">
      {%- for block in section.blocks -%}
        <div class="lom-trust-strip__item" {{ block.shopify_attributes }}>
          <span class="lom-trust-strip__number">{{ block.settings.number }}</span>
          <span class="lom-trust-strip__label">{{ block.settings.label }}</span>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Trust Strip",
  "tag": "section",
  "class": "lom-trust-strip-section",
  "settings": [],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number / value",
          "default": "10,000+"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Sticks Sold"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Strip",
      "blocks": [
        { "type": "stat", "settings": { "number": "10,000+", "label": "Sticks Sold" } },
        { "type": "stat", "settings": { "number": "4.8 â˜…", "label": "Avg Rating" } },
        { "type": "stat", "settings": { "number": "100%", "label": "Natural" } },
        { "type": "stat", "settings": { "number": "30-Day", "label": "Guarantee" } }
      ]
    }
  ]
}
{% endschema %}
