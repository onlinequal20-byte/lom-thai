{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-story {% if section.settings.reverse %}lom-story--reverse{% endif %} {% if section.settings.background == 'cream' %}lom-bg-cream{% endif %}">
  <div class="lom-container--wide">
    <div class="lom-story__grid">
      <div class="lom-story__image lom-reveal">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | image_url: width: 900 }}" alt="{{ section.settings.image.alt | default: section.settings.heading }}" loading="lazy">
        {% endif %}
      </div>
      <div class="lom-story__text lom-reveal">
        {% if section.settings.eyebrow != blank %}
          <span class="lom-story__eyebrow">{{ section.settings.eyebrow }}</span>
        {% endif %}
        <h2 class="lom-story__heading">{{ section.settings.heading }}</h2>
        <div class="lom-story__body">{{ section.settings.text }}</div>
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_url }}" class="lom-btn-secondary">{{ section.settings.button_text }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Lom Story Block",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Our Heritage"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "A Century-Old Thai Tradition, Reimagined"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Body text",
      "default": "<p>For over 100 years, Thai families have relied on ya dom — aromatic herbal inhalers — for natural relief. Lom Thai brings this tradition to the world with a modern, premium design that fits your pocket and your lifestyle.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "checkbox",
      "id": "reverse",
      "label": "Reverse layout (image right)",
      "default": false
    },
    {
      "type": "select",
      "id": "background",
      "label": "Background",
      "options": [
        { "value": "white", "label": "White" },
        { "value": "cream", "label": "Cream" }
      ],
      "default": "white"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Lom Story Block"
    }
  ]
}
{% endschema %}
