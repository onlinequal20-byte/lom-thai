{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-steps">
  <div class="lom-container">
    <h2 class="lom-heading lom-fade-in">{{ section.settings.heading }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="lom-heading-subtitle lom-fade-in">{{ section.settings.subtitle }}</p>
    {% endif %}
    <div class="lom-steps-container">
      {% for block in section.blocks %}
        <div class="lom-step lom-fade-in" {{ block.shopify_attributes }}>
          <div class="lom-step__top">
            <span class="lom-step-number">{{ forloop.index }}</span>
            {% unless forloop.last %}<span class="lom-step-connector"></span>{% endunless %}
          </div>
          <div class="lom-step__text">
            <h3>{{ block.settings.heading }}</h3>
            <p>{{ block.settings.text }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
    {% if section.settings.transition != blank %}
      <p class="lom-steps-transition lom-fade-in">{{ section.settings.transition }}</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Lom How It Works",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How It Works"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "textarea",
      "id": "transition",
      "label": "Transition line",
      "default": "That's it. No water needed. No waiting. No side effects. No crash."
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Step title",
          "default": "Choose Your Relief"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Step description",
          "default": "Inhaler for a refreshing aromatic experience. Roller for soothing comfort."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lom How It Works",
      "blocks": [
        { "type": "step", "settings": { "heading": "Uncap It", "text": "Takes one second. Fits in your pocket, purse, or gym bag." } },
        { "type": "step", "settings": { "heading": "Inhale or Roll On", "text": "One deep breath through the inhaler for a refreshing sensation. Roll the balm on temples for soothing comfort." } },
        { "type": "step", "settings": { "heading": "Feel the Difference", "text": "The aromatic herbal blend is noticeable immediately. A century-old Thai tradition, now in your pocket." } }
      ]
    }
  ]
}
{% endschema %}

