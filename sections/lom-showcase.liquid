{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-showcase">
  <div class="lom-container">
    <div class="lom-showcase-content lom-fade-in">
      <div class="lom-showcase-image">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | image_url: width: 800 }}" alt="{{ section.settings.image.alt | default: section.settings.heading }}" loading="lazy">
        {% elsif collections.all.products.first.images[1] %}
          <img src="{{ collections.all.products.first.images[1] | image_url: width: 800 }}" alt="{{ collections.all.products.first.title }}" loading="lazy">
        {% endif %}
      </div>
      <div class="lom-showcase-text">
        <h2>{{ section.settings.heading }}</h2>
        <p class="lom-showcase-subhead">{{ section.settings.subhead }}</p>

        <div class="lom-benefit-blocks">
          {% for block in section.blocks %}
            <div class="lom-benefit-block" {{ block.shopify_attributes }}>
              <div class="lom-benefit-feature">{{ block.settings.feature }}</div>
              <div class="lom-benefit-outcome">{{ block.settings.benefit }}</div>
              <div class="lom-benefit-life-impact">{{ block.settings.life_impact }}</div>
            </div>
          {% endfor %}
        </div>

        <p class="lom-showcase-identity">{{ section.settings.identity_callout }}</p>

        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_url }}" class="lom-cta-btn">{{ section.settings.button_text }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Lom Solution Showcase",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "This Is What Nurses, Athletes & Truck Drivers Carry Instead"
    },
    {
      "type": "textarea",
      "id": "subhead",
      "label": "Subhead",
      "default": "Lom Thai isn't a product. It's a decision to stop poisoning your body for relief."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Product image"
    },
    {
      "type": "text",
      "id": "identity_callout",
      "label": "Identity callout",
      "default": "People who carry Lom Thai don't wait for relief. They choose it."
    },
    {
      "type": "text",
      "id": "button_text",
