<section class="lom-contact">
  <div class="lom-contact__bg">
    <div class="lom-contact__bg-glow"></div>
  </div>

  <div class="lom-container">
    <!-- Header -->
    <div class="lom-contact__header lom-reveal">
      <div class="lom-contact__badge">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--lt-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 01-2 2H7l-4 4V5a2 2 0 012-2h14a2 2 0 012 2z"/></svg>
        <span>We'd love to hear from you</span>
      </div>
      <h1>{{ section.settings.heading }}</h1>
      <p class="lom-contact__promise">{{ section.settings.promise }}</p>
    </div>

    <!-- Main grid -->
    <div class="lom-contact__grid">
      <!-- Form card -->
      <div class="lom-contact__form-wrap lom-reveal">
        <h2 class="lom-contact__form-title">Send Us a Message</h2>

        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <div class="lom-contact__success">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="var(--lt-emerald-light)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 11-5.93-9.14"/><path d="M22 4L12 14.01l-3-3"/></svg>
              <p>Message sent! We'll get back to you within 24 hours.</p>
            </div>
          {% endif %}

          {% if form.errors %}
            <div class="lom-contact__errors">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <div class="lom-contact__row">
            <div class="lom-contact__field">
              <label for="contact-name">Name</label>
              <input type="text" id="contact-name" name="contact[name]" placeholder="Your full name" required>
            </div>
            <div class="lom-contact__field">
              <label for="contact-email">Email</label>
              <input type="email" id="contact-email" name="contact[email]" placeholder="you@example.com" required>
            </div>
          </div>

          <div class="lom-contact__field">
            <label for="contact-subject">Subject</label>
            <select id="contact-subject" name="contact[subject]">
              <option value="General Inquiry">General Inquiry</option>
              <option value="Order Support">Order Support</option>
              <option value="Shipping Question">Shipping Question</option>
              <option value="Product Question">Product Question</option>
              <option value="Returns & Refunds">Returns & Refunds</option>
              <option value="Wholesale Inquiry">Wholesale Inquiry</option>
            </select>
          </div>

          <div class="lom-contact__field">
            <label for="contact-message">Message</label>
            <textarea id="contact-message" name="contact[body]" rows="5" placeholder="Tell us how we can help..." required></textarea>
          </div>

          <button type="submit" class="lom-contact__submit">
            <span>Send Message</span>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"/></svg>
          </button>
        {% endform %}
      </div>

      <!-- Info sidebar -->
      <div class="lom-contact__sidebar lom-reveal">
        <!-- Email card -->
        {% if section.settings.email != blank %}
        <div class="lom-contact__info-card">
          <div class="lom-contact__info-icon">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="var(--lt-gold)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><path d="M22 6l-10 7L2 6"/></svg>
          </div>
          <h3>Email Us</h3>
          <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
          <p class="lom-contact__info-note">We reply within 24 hours</p>
        </div>
        {% endif %}

        <!-- FAQ card -->
        <div class="lom-contact__info-card">
          <div class="lom-contact__info-icon">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="var(--lt-gold)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M9.09 9a3 3 0 015.83 1c0 2-3 3-3 3"/><path d="M12 17h.01"/></svg>
          </div>
          <h3>Quick Answers</h3>
          <p>{{ section.settings.faq_text }}</p>
          {% if section.settings.faq_link != blank %}
            <a href="{{ section.settings.faq_link }}" class="lom-contact__info-link">{{ section.settings.faq_link_text }}</a>
          {% endif %}
        </div>

        <!-- Social card -->
        {% if section.settings.show_social %}
        <div class="lom-contact__info-card">
          <div class="lom-contact__info-icon">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="var(--lt-gold)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M17 2H7a5 5 0 00-5 5v10a5 5 0 005 5h10a5 5 0 005-5V7a5 5 0 00-5-5z"/><circle cx="12" cy="12" r="4"/><path d="M17.5 6.5h.01"/></svg>
          </div>
          <h3>Follow Us</h3>
          <div class="lom-contact__social">
            {% if section.settings.instagram != blank %}
              <a href="{{ section.settings.instagram }}" target="_blank" rel="noopener" aria-label="Instagram">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 2H7a5 5 0 00-5 5v10a5 5 0 005 5h10a5 5 0 005-5V7a5 5 0 00-5-5z"/><circle cx="12" cy="12" r="4"/><path d="M17.5 6.5h.01"/></svg>
                Instagram
              </a>
            {% endif %}
            {% if section.settings.tiktok != blank %}
              <a href="{{ section.settings.tiktok }}" target="_blank" rel="noopener" aria-label="TikTok">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-2.88 2.5 2.89 2.89 0 01-.88-5.64v-3.5a6.37 6.37 0 00-.88-.06A6.39 6.39 0 001.34 15a6.39 6.39 0 006.39 6.39 6.39 6.39 0 006.39-6.39V9.42a8.28 8.28 0 004.85 1.56V7.53a4.84 4.84 0 01-.38-.84z"/></svg>
                TikTok
              </a>
            {% endif %}
            {% if section.settings.facebook != blank %}
              <a href="{{ section.settings.facebook }}" target="_blank" rel="noopener" aria-label="Facebook">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg>
                Facebook
              </a>
            {% endif %}
          </div>
        </div>
        {% endif %}

        <!-- Response promise -->
        <div class="lom-contact__promise-card">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="var(--lt-gold)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
          <div>
            <strong>Average Response Time</strong>
            <span>Under 12 hours</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
/* ============================================================
   LOM CONTACT — Premium branded contact page
   ============================================================ */
.lom-contact {
  position: relative;
  background: var(--lt-black);
  padding: var(--lt-section-pad) 0;
  overflow: hidden;
  min-height: 80vh;
}
.lom-contact__bg {
  position: absolute;
  inset: 0;
  pointer-events: none;
  z-index: 0;
}
.lom-contact__bg-glow {
  position: absolute;
  top: -100px;
  left: 50%;
  transform: translateX(-50%);
  width: 700px;
  height: 500px;
  background: radial-gradient(circle, var(--lt-gold-glow) 0%, transparent 70%);
  opacity: 0.4;
  filter: blur(80px);
}

/* Header */
.lom-contact__header {
  position: relative;
  z-index: 1;
  text-align: center;
  margin-bottom: 56px;
}
.lom-contact__badge {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 8px 18px;
  background: rgba(212,175,106,0.08);
  border: 1px solid rgba(212,175,106,0.15);
  border-radius: 100px;
  margin-bottom: 24px;
}
.lom-contact__badge span {
  font-family: var(--lt-sans);
  font-size: 12px;
  font-weight: 500;
  color: var(--lt-gold);
  letter-spacing: 0.04em;
  text-transform: uppercase;
}
.lom-contact__header h1 {
  font-family: var(--lt-serif);
  font-size: clamp(32px, 5vw, 52px);
  font-weight: 400;
  color: var(--lt-cream);
  letter-spacing: -0.02em;
  line-height: 1.1;
  margin: 0 0 14px;
}
.lom-contact__promise {
  font-family: var(--lt-sans);
  font-size: 16px;
  color: var(--lt-text-muted);
  margin: 0;
  font-style: italic;
}

/* Grid */
.lom-contact__grid {
  position: relative;
  z-index: 1;
  display: grid;
  grid-template-columns: 1.3fr 0.7fr;
  gap: 40px;
  max-width: 960px;
  margin: 0 auto;
}

/* Form card */
.lom-contact__form-wrap {
  background: var(--lt-charcoal);
  border: 1px solid var(--lt-border-light);
  border-radius: 20px;
  padding: 48px;
}
.lom-contact__form-title {
  font-family: var(--lt-serif);
  font-size: 22px;
  font-weight: 400;
  color: var(--lt-cream);
  margin: 0 0 32px;
}
.lom-contact__row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
}
.lom-contact__field {
  margin-bottom: 20px;
}
.lom-contact__field label {
  display: block;
  font-family: var(--lt-sans);
  font-size: 11px;
  font-weight: 600;
  color: var(--lt-text);
  margin-bottom: 8px;
  text-transform: uppercase;
  letter-spacing: 1.5px;
}
.lom-contact__field input,
.lom-contact__field textarea,
.lom-contact__field select {
  width: 100%;
  padding: 14px 18px;
  font-family: var(--lt-sans);
  font-size: 15px;
  color: var(--lt-cream);
  background: var(--lt-dark);
  border: 1px solid var(--lt-border);
  border-radius: 10px;
  transition: border-color 0.3s, box-shadow 0.3s;
  -webkit-appearance: none;
  appearance: none;
}
.lom-contact__field select {
  background-image: url("data:image/svg+xml,%3Csvg width='12' height='8' viewBox='0 0 12 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1.5L6 6.5L11 1.5' stroke='%238a8a8a' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
  background-repeat: no-repeat;
  background-position: right 16px center;
  padding-right: 40px;
  cursor: pointer;
}
.lom-contact__field select option {
  background: var(--lt-charcoal);
  color: var(--lt-cream);
}
.lom-contact__field input:focus,
.lom-contact__field textarea:focus,
.lom-contact__field select:focus {
  outline: none;
  border-color: var(--lt-gold);
  box-shadow: 0 0 0 3px var(--lt-gold-glow);
}
.lom-contact__field input::placeholder,
.lom-contact__field textarea::placeholder {
  color: var(--lt-text-muted);
}
.lom-contact__field textarea {
  resize: vertical;
  min-height: 120px;
}
.lom-contact__submit {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  width: 100%;
  margin-top: 4px;
  padding: 18px 40px;
  font-family: var(--lt-sans);
  font-size: 14px;
  font-weight: 600;
  letter-spacing: 0.04em;
  text-transform: uppercase;
  background: linear-gradient(135deg, var(--lt-gold), var(--lt-gold-dark));
  color: var(--lt-black);
  border: none;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s;
}
.lom-contact__submit:hover {
  background: linear-gradient(135deg, var(--lt-gold-light), var(--lt-gold));
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(212,175,106,0.2);
}
.lom-contact__submit svg {
  transition: transform 0.3s;
}
.lom-contact__submit:hover svg {
  transform: translate(2px, -2px);
}

/* Success / Error */
.lom-contact__success {
  display: flex;
  align-items: center;
  gap: 12px;
  background: rgba(52,128,94,0.12);
  border: 1px solid rgba(52,128,94,0.2);
  border-radius: 12px;
  padding: 18px 22px;
  margin-bottom: 24px;
}
.lom-contact__success p {
  font-family: var(--lt-sans);
  font-size: 14px;
  color: var(--lt-emerald-light);
  margin: 0;
}
.lom-contact__errors {
  background: rgba(193,87,79,0.12);
  border: 1px solid rgba(193,87,79,0.2);
  border-radius: 12px;
  padding: 18px 22px;
  margin-bottom: 24px;
  font-family: var(--lt-sans);
  font-size: 14px;
  color: var(--lt-danger);
}

/* Sidebar */
.lom-contact__sidebar {
  display: flex;
  flex-direction: column;
  gap: 16px;
}
.lom-contact__info-card {
  background: var(--lt-charcoal);
  border: 1px solid var(--lt-border);
  border-radius: 16px;
  padding: 28px;
  transition: border-color 0.3s;
}
.lom-contact__info-card:hover {
  border-color: var(--lt-border-light);
}
.lom-contact__info-icon {
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(212,175,106,0.08);
  border-radius: 10px;
  margin-bottom: 16px;
}
.lom-contact__info-card h3 {
  font-family: var(--lt-sans);
  font-size: 14px;
  font-weight: 600;
  color: var(--lt-cream);
  margin: 0 0 8px;
  letter-spacing: 0.01em;
}
.lom-contact__info-card p {
  font-family: var(--lt-sans);
  font-size: 13px;
  color: var(--lt-text-muted);
  line-height: 1.6;
  margin: 0;
}
.lom-contact__info-card > a {
  font-family: var(--lt-sans);
  font-size: 14px;
  color: var(--lt-gold);
  text-decoration: none;
  display: block;
  margin-bottom: 4px;
  transition: color 0.3s;
}
.lom-contact__info-card > a:hover {
  color: var(--lt-gold-light);
}
.lom-contact__info-note {
  font-size: 12px !important;
  color: var(--lt-text-muted) !important;
  margin-top: 6px !important;
  opacity: 0.7;
}
.lom-contact__info-link {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  font-family: var(--lt-sans);
  font-size: 13px;
  font-weight: 500;
  color: var(--lt-gold) !important;
  text-decoration: none !important;
  margin-top: 8px;
  transition: color 0.3s;
}
.lom-contact__info-link:hover {
  color: var(--lt-gold-light) !important;
}

/* Social */
.lom-contact__social {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-top: 4px;
}
.lom-contact__social a {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  font-family: var(--lt-sans);
  font-size: 12px;
  font-weight: 500;
  color: var(--lt-text);
  text-decoration: none;
  padding: 8px 14px;
  border: 1px solid var(--lt-border);
  border-radius: 8px;
  transition: all 0.3s;
}
.lom-contact__social a:hover {
  background: var(--lt-gold);
  color: var(--lt-black);
  border-color: var(--lt-gold);
}

/* Response promise */
.lom-contact__promise-card {
  display: flex;
  align-items: center;
  gap: 14px;
  background: rgba(212,175,106,0.06);
  border: 1px solid rgba(212,175,106,0.12);
  border-radius: 12px;
  padding: 20px 24px;
}
.lom-contact__promise-card strong {
  display: block;
  font-family: var(--lt-sans);
  font-size: 13px;
  font-weight: 600;
  color: var(--lt-cream);
}
.lom-contact__promise-card span {
  display: block;
  font-family: var(--lt-sans);
  font-size: 12px;
  color: var(--lt-gold);
  margin-top: 2px;
}

/* Mobile */
@media (max-width: 768px) {
  .lom-contact {
    padding: var(--lt-section-pad-mobile) 0;
  }
  .lom-contact__header {
    margin-bottom: 40px;
  }
  .lom-contact__grid {
    grid-template-columns: 1fr;
    gap: 32px;
  }
  .lom-contact__form-wrap {
    padding: 32px 24px;
    border-radius: 16px;
  }
  .lom-contact__row {
    grid-template-columns: 1fr;
  }
  .lom-contact__submit {
    min-height: 56px;
    font-size: 15px;
  }
  .lom-contact__info-card {
    padding: 24px;
  }
}
</style>

