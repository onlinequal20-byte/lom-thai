{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-faq">
  <div class="lom-container">
    <h2 class="lom-heading lom-fade-in">{{ section.settings.heading }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="lom-heading-subtitle lom-fade-in">{{ section.settings.subtitle }}</p>
    {% endif %}
    <div class="lom-faq-list">
      {% for block in section.blocks %}
        <div class="lom-faq-item lom-fade-in" {{ block.shopify_attributes }}>
          <button class="lom-faq-question" onclick="this.parentElement.classList.toggle('active')">
            {{ block.settings.question }}
            <span class="lom-faq-toggle">+</span>
          </button>
          <div class="lom-faq-answer">
            <p>{{ block.settings.answer }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="lom-faq__view-all">
      <a href="/pages/faq" class="lom-faq__view-all-link">View All FAQs →</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Lom FAQ",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    }
  ],
  "blocks": [
    {
      "type": "question",
      "name": "Question",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Is this a drug or medication?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "No. Siam Lom is a 100% natural herbal aromatherapy product made from essential oils. It's not a drug, medication, or supplement."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lom FAQ",
      "blocks": [
        { "type": "question", "settings": { "question": "Is this actually safe?", "answer": "5 ingredients. All plant-based. Used by millions in Thailand for over a century. It's not a drug, medication, or supplement — it's a natural herbal aromatherapy stick used through inhalation and topical application. As with any product, discontinue use if irritation occurs." } },
        { "type": "question", "settings": { "question": "How is this different from Vicks?", "answer": "Vicks is petroleum-based with synthetic menthol. Siam Lom uses pure plant extracts — menthol, camphor, eucalyptus, borneol, and lemon — in a century-old Thai formula. Different universe. Thai herbalists perfected this blend generations before Vicks existed." } },
        { "type": "question", "settings": { "question": "What if it doesn't work for me?", "answer": "Email us. Full refund. No forms, no shipping it back, no 'restocking fee.' 97% of people keep it — but if you're in the 3%, we'll make it right without a single question." } },
        { "type": "question", "settings": { "question": "Do you ship internationally?", "answer": "Free US shipping (5-7 business days). Free EU shipping (5-10 business days). Ships within 24 hours. Every order is backed by our 30-day money-back guarantee, no matter where you are." } },
        { "type": "question", "settings": { "question": "How quickly can I feel the aroma?", "answer": "The aromatic experience is immediate — one inhale and you'll notice the herbal blend. Many people in Thailand have traditionally used this type of inhaler throughout their day for a refreshing sensation." } },
