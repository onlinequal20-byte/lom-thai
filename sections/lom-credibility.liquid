{{ 'lom-natural.css' | asset_url | stylesheet_tag }}

<section class="lom-credibility">
  <div class="lom-container">
    <div class="lom-credibility-items">
      {% for block in section.blocks %}
        <div class="lom-credibility-item lom-fade-in" {{ block.shopify_attributes }}>
          <div class="lom-credibility-icon">{{ block.settings.icon }}</div>
          <div class="lom-credibility-text">
            <strong>{{ block.settings.title }}</strong>
            {% if block.settings.subtitle != blank %}
              <span>{{ block.settings.subtitle }}</span>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

